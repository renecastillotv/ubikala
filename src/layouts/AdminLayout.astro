---
interface Props {
  title: string;
}

const { title } = Astro.props;
const user = Astro.locals.user;

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/admin/dashboard', label: 'Dashboard', icon: 'home' },
  { href: '/admin/properties', label: 'Propiedades', icon: 'building' },
  { href: '/admin/leads', label: 'Clientes', icon: 'messages' },
  ...(user?.role === 'inmobiliaria' ? [{ href: '/admin/team', label: 'Mi Equipo', icon: 'team' }] : []),
  ...(user?.role === 'admin' ? [{ href: '/admin/users', label: 'Usuarios', icon: 'users' }] : []),
  ...(user?.role === 'admin' ? [{ href: '/admin/plans', label: 'Planes', icon: 'plans' }] : []),
  ...(user?.role === 'admin' ? [{ href: '/admin/promo-codes', label: 'Promociones', icon: 'promo' }] : []),
  ...(user?.role === 'admin' ? [{ href: '/admin/verifications', label: 'Verificaciones', icon: 'verify' }] : []),
  ...(user?.role === 'admin' ? [{ href: '/admin/activity', label: 'Actividad', icon: 'activity' }] : []),
  { href: '/admin/account', label: 'Mi Cuenta', icon: 'account' },
  { href: '/admin/profile', label: 'Mi Perfil', icon: 'profile' },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title} | Ubikala Admin</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=block" rel="stylesheet" />
    <style>
      /* Ubikala Color Palette */
      :root {
        --ubikala-olive: #5C6B3C;
        --ubikala-olive-dark: #4A5730;
        --ubikala-olive-light: #7A8B5A;
        --ubikala-sand: #D4C4A8;
        --ubikala-sand-light: #E8DFD0;
        --ubikala-sand-dark: #B5A68A;
        --ubikala-terracotta: #C96D3D;
        --ubikala-terracotta-dark: #A85A30;
        --ubikala-ivory: #FAF7F0;
        --ubikala-ivory-pure: #FFFEF9;
        --ubikala-warm-gray: #6B6660;
        --ubikala-warm-gray-light: #8B8680;
        --ubikala-warm-gray-dark: #4A4642;
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: 'Inter', sans-serif;
        background-color: var(--ubikala-ivory);
        min-height: 100vh;
        color: var(--ubikala-warm-gray-dark);
      }
      .sidebar {
        width: 260px;
        background: linear-gradient(135deg, var(--ubikala-olive) 0%, var(--ubikala-olive-dark) 100%);
        min-height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        color: white;
        padding: 1.5rem 0;
      }
      .logo {
        padding: 0 1.5rem 1.5rem;
        border-bottom: 1px solid rgba(255,255,255,0.15);
        margin-bottom: 1rem;
      }
      .logo-brand {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .logo-isotipo {
        width: 32px;
        height: 32px;
        object-fit: contain;
      }
      .logo h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        letter-spacing: -0.03em;
      }
      .logo span {
        font-size: 0.75rem;
        color: rgba(255,255,255,0.6);
        display: block;
        margin-top: 0.25rem;
      }
      .nav-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.5rem;
        color: rgba(255,255,255,0.7);
        text-decoration: none;
        transition: all 0.2s;
        font-size: 0.9375rem;
      }
      .nav-item:hover {
        background: rgba(255,255,255,0.1);
        color: white;
      }
      .nav-item.active {
        background: rgba(255,255,255,0.15);
        color: white;
        border-left: 3px solid var(--ubikala-terracotta);
      }
      .nav-icon {
        width: 20px;
        height: 20px;
        stroke: currentColor;
        stroke-width: 2;
        fill: none;
      }
      .main-content {
        margin-left: 260px;
        min-height: 100vh;
      }
      .topbar {
        background: var(--ubikala-ivory-pure);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--ubikala-sand);
        position: sticky;
        top: 0;
        z-index: 10;
      }
      .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--ubikala-warm-gray-dark);
      }
      .user-menu {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      .user-info {
        text-align: right;
      }
      .user-name {
        font-weight: 600;
        color: var(--ubikala-warm-gray-dark);
        font-size: 0.875rem;
      }
      .user-role {
        font-size: 0.75rem;
        color: var(--ubikala-warm-gray);
        text-transform: capitalize;
      }
      .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--ubikala-olive);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        overflow: hidden;
      }
      .avatar-img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
      }
      .logout-btn {
        padding: 0.5rem 1rem;
        background: var(--ubikala-terracotta);
        color: white;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        font-size: 0.875rem;
        font-weight: 500;
        transition: background 0.2s;
      }
      .logout-btn:hover {
        background: var(--ubikala-terracotta-dark);
      }
      .content {
        padding: 2rem;
      }
      /* Back to site link */
      .back-to-site {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        margin-top: auto;
        color: rgba(255,255,255,0.6);
        text-decoration: none;
        font-size: 0.8125rem;
        border-top: 1px solid rgba(255,255,255,0.1);
        transition: all 0.2s;
      }
      .back-to-site:hover {
        color: white;
        background: rgba(255,255,255,0.05);
      }
      .sidebar-content {
        display: flex;
        flex-direction: column;
        height: 100%;
      }
      .sidebar nav {
        flex: 1;
      }
      @media (max-width: 1024px) {
        .sidebar {
          transform: translateX(-100%);
          z-index: 50;
        }
        .main-content {
          margin-left: 0;
        }
      }
    </style>
  </head>
  <body>
    <aside class="sidebar">
      <div class="sidebar-content">
        <div class="logo">
          <div class="logo-brand">
            <img src="/images/ubikala-isotipo.png" alt="Ubikala" class="logo-isotipo" />
            <h1>Ubikala</h1>
          </div>
          <span>Panel de Administración</span>
        </div>
        <nav>
          {navItems.map(item => (
            <a href={item.href} class:list={['nav-item', { active: currentPath.startsWith(item.href) }]}>
              <svg class="nav-icon" viewBox="0 0 24 24">
                {item.icon === 'home' && <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z M9 22V12h6v10" />}
                {item.icon === 'building' && <path d="M3 21h18 M9 8h1 M9 12h1 M9 16h1 M14 8h1 M14 12h1 M14 16h1 M5 21V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16" />}
                {item.icon === 'messages' && <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />}
                {item.icon === 'team' && <><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></>}
                {item.icon === 'users' && <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2 M23 21v-2a4 4 0 0 0-3-3.87 M16 3.13a4 4 0 0 1 0 7.75 M9 7a4 4 0 1 0 0 8 4 4 0 0 0 0-8z" />}
                {item.icon === 'plans' && <><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" /><polyline points="14 2 14 8 20 8" /><line x1="16" y1="13" x2="8" y2="13" /><line x1="16" y1="17" x2="8" y2="17" /><polyline points="10 9 9 9 8 9" /></>}
                {item.icon === 'promo' && <><path d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" /></>}
                {item.icon === 'verify' && <><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></>}
                {item.icon === 'activity' && <path d="M22 12h-4l-3 9L9 3l-3 9H2" />}
                {item.icon === 'account' && <><rect x="2" y="4" width="20" height="16" rx="2" /><path d="M6 8h.01M10 8h.01M14 8h.01M6 12h12M6 16h8" /></>}
                {item.icon === 'profile' && <><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" /><circle cx="12" cy="7" r="4" /></>}
              </svg>
              {item.label}
            </a>
          ))}
        </nav>
        <a href="/" class="back-to-site">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Volver al sitio
        </a>
      </div>
    </aside>

    <main class="main-content">
      <header class="topbar">
        <h2 class="page-title">{title}</h2>
        <div class="user-menu">
          <div class="user-info">
            <div class="user-name">{user?.name}</div>
            <div class="user-role">{user?.role}</div>
          </div>
          <div class="avatar">
            {user?.avatar_url ? (
              <img src={user.avatar_url} alt={user.name} class="avatar-img" />
            ) : (
              user?.name?.charAt(0).toUpperCase()
            )}
          </div>
          <button id="logout-btn" class="logout-btn">Cerrar Sesión</button>
        </div>
      </header>
      <div class="content">
        <slot />
      </div>
    </main>

    <script>
      document.getElementById('logout-btn')?.addEventListener('click', async () => {
        try {
          await fetch('/api/admin/auth/logout', { method: 'POST' });
          window.location.href = '/admin/login';
        } catch (e) {
          console.error('Logout error:', e);
        }
      });
    </script>
  </body>
</html>
