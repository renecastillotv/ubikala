---
import type { Benefit } from '../lib/seo-content-db';

interface Props {
  benefits: Benefit[];
}

const { benefits } = Astro.props;

// Map icon names to SVG paths
const iconPaths: Record<string, string> = {
  globe: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064',
  chart: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
  money: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  sun: 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  home: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
};

// Cycle through color schemes for each benefit card
const colorSchemes = [
  { from: 'from-primary-50',   border: 'border-primary-100',   iconBg: 'bg-primary-100',   iconText: 'text-primary-600' },
  { from: 'from-secondary-50', border: 'border-secondary-100', iconBg: 'bg-secondary-100', iconText: 'text-secondary-600' },
  { from: 'from-accent-50',    border: 'border-accent-100',    iconBg: 'bg-accent-100',    iconText: 'text-accent-600' },
  { from: 'from-primary-50',   border: 'border-primary-100',   iconBg: 'bg-primary-100',   iconText: 'text-primary-600' },
];

function getPath(icon: string): string {
  return iconPaths[icon] || iconPaths.globe;
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  {benefits.map((benefit, index) => {
    const scheme = colorSchemes[index % colorSchemes.length];
    return (
      <div class={`bg-gradient-to-br ${scheme.from} to-white rounded-2xl p-6 border ${scheme.border}`}>
        <div class={`w-12 h-12 ${scheme.iconBg} rounded-xl flex items-center justify-center mb-4`}>
          <svg class={`w-6 h-6 ${scheme.iconText}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getPath(benefit.icon)} />
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">{benefit.title}</h3>
        <p class="text-sm text-gray-600">{benefit.description}</p>
      </div>
    );
  })}
</div>
