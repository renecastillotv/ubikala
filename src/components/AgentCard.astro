---
import type { Agent } from '../data/types';
import { getLangFromUrl, useTranslations, localizedUrl } from '../i18n';

interface Props {
  agent: Agent;
  href?: string;
}

const { agent, href } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Check if photo is valid (not empty, not placeholder path that doesn't exist)
const hasValidPhoto = agent.photo &&
  agent.photo !== '/images/agent-placeholder.svg' &&
  !agent.photo.includes('placeholder');

const cardHref = href ?? localizedUrl(agent.isUbikalaUser ? `/usuario/${agent.slug}` : `/asesor/${agent.slug}`, lang);
---

<a
  href={cardHref}
  class="card group p-6 text-center"
  data-agent-name={agent.name}
  data-agent-company={agent.company || 'Asesor Independiente'}
>
  <!-- Photo -->
  <div class="relative inline-block mb-4">
    {hasValidPhoto ? (
      <img
        src={agent.photo}
        alt={agent.name}
        class="w-24 h-24 rounded-full object-cover mx-auto ring-4 ring-gray-100 group-hover:ring-primary-100 transition-all"
        loading="lazy"
        decoding="async"
        width="96"
        height="96"
        onerror="this.style.display='none';this.nextElementSibling.style.display='flex';"
      />
      <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 mx-auto ring-4 ring-gray-100 group-hover:ring-primary-100 transition-all hidden items-center justify-center">
        <span class="text-white text-2xl font-bold">{agent.name.split(' ').map(n => n[0]).slice(0, 2).join('')}</span>
      </div>
    ) : (
      <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 mx-auto ring-4 ring-gray-100 group-hover:ring-primary-100 transition-all flex items-center justify-center">
        <span class="text-white text-2xl font-bold">{agent.name.split(' ').map(n => n[0]).slice(0, 2).join('')}</span>
      </div>
    )}
    {agent.verified && (
      <span class="absolute bottom-0 right-0 w-7 h-7 bg-primary-600 rounded-full flex items-center justify-center ring-2 ring-white">
        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
      </span>
    )}
  </div>

  <!-- Info -->
  <h3 class="font-semibold text-gray-900 text-lg mb-1 group-hover:text-primary-600 transition-colors">
    {agent.name}
  </h3>

  <p class="text-sm text-gray-500 mb-2">
    {agent.isUbikalaUser
      ? agent.parentCompany
        ? `${t.agent.agentOf} ${agent.parentCompany}`
        : agent.userType === 'agent'
          ? agent.company || t.agent.realEstateCompany
          : agent.userType === 'independent'
            ? t.agent.independentAgent
            : t.agent.propertyOwner
      : agent.company || t.agent.realEstateAdvisor
    }
  </p>

  <p class="text-sm text-gray-600 mb-3">
    {agent.experienceYears} {t.agent.experience}
  </p>

  <!-- Rating -->
  <div class="flex items-center justify-center gap-1 mb-4">
    <div class="flex">
      {[1, 2, 3, 4, 5].map((star) => (
        <svg
          class={`w-4 h-4 ${star <= Math.round(agent.rating) ? 'text-accent-500' : 'text-gray-300'}`}
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
    <span class="text-sm text-gray-600">
      {agent.rating} ({agent.reviewCount})
    </span>
  </div>

  <!-- Stats -->
  <div class="flex items-center justify-center gap-4 text-sm text-gray-600 mb-4">
    <div class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span>{agent.propertiesCount} {t.agent.properties}</span>
    </div>
  </div>

  <!-- Languages -->
  <div class="flex flex-wrap justify-center gap-2 mb-4">
    {agent.languages.map((language) => (
      <span class="badge-primary">{language}</span>
    ))}
  </div>

  <!-- Contact Button -->
  <button class="btn-primary w-full text-sm">
    {t.agent.contactNow}
  </button>
</a>
