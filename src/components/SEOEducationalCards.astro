---
import type { EduCard } from '../lib/seo-content-db';

interface Props {
  cards: EduCard[];
}

const { cards } = Astro.props;

// Map icon names to SVG paths and color classes
const iconConfig: Record<string, { paths: string; bg: string; text: string }> = {
  money: {
    paths: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    bg: 'bg-green-100',
    text: 'text-green-600',
  },
  shield: {
    paths: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    bg: 'bg-primary-100',
    text: 'text-primary-600',
  },
  globe: {
    paths: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    bg: 'bg-purple-100',
    text: 'text-purple-600',
  },
};

function getIcon(icon: string) {
  return iconConfig[icon] || iconConfig.shield;
}
---

<div class="grid md:grid-cols-3 gap-8">
  {cards.map((card) => {
    const icon = getIcon(card.icon);
    return (
      <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
        <div class={`w-12 h-12 ${icon.bg} rounded-lg flex items-center justify-center mb-4`}>
          <svg class={`w-6 h-6 ${icon.text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon.paths} />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">{card.title}</h3>
        <p class="text-gray-600 text-sm mb-4">{card.description}</p>
        <a href={card.link} class="text-primary-600 font-medium text-sm hover:underline inline-flex items-center gap-1">
          {card.title}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    );
  })}
</div>
