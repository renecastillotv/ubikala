---
import { getLangFromUrl, useTranslations, localizedUrl } from '../i18n';
import PropertyCard from './PropertyCard.astro';
import { getFeaturedProperties } from '../lib/db';
import { transformProperties, type DBProperty } from '../lib/transformers';
import type { Property } from '../data/types';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Fetch from database
let featuredProperties: Property[] = [];
try {
  const dbProperties = await getFeaturedProperties(6);
  featuredProperties = transformProperties(dbProperties as unknown as DBProperty[]);
} catch (error) {
  console.error('Error fetching featured properties:', error);
}
---

<section class="section bg-gray-50">
  <div class="container-custom">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12">
      <div>
        <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">
          {t.common.featured}
        </span>
        <h2 class="section-title mt-2">
          Propiedades Destacadas
        </h2>
        <p class="section-subtitle">
          Descubre las mejores oportunidades inmobiliarias seleccionadas por nuestros expertos
        </p>
      </div>
      <a
        href={localizedUrl('/propiedades', lang)}
        class="btn-outline mt-6 md:mt-0"
      >
        {t.common.viewAll}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredProperties.map((property) => (
        <PropertyCard property={property} />
      ))}
    </div>
  </div>
</section>
