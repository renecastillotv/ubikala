---
interface Props {
  title: string;
  text: string;
  color?: 'green' | 'blue';
}

const { title, text, color = 'green' } = Astro.props;

// Map color prop to Tailwind classes
const colorClasses = {
  green: {
    bg: 'bg-green-50',
    border: 'border-green-500',
    iconBg: 'bg-green-500',
    title: 'text-green-800',
    text: 'text-green-700',
  },
  blue: {
    bg: 'bg-blue-50',
    border: 'border-blue-500',
    iconBg: 'bg-blue-500',
    title: 'text-blue-800',
    text: 'text-blue-700',
  },
};

const c = colorClasses[color];
---

<div class={`${c.bg} border-l-4 ${c.border} rounded-r-xl p-6`}>
  <div class="flex items-start gap-4">
    <div class={`w-10 h-10 ${c.iconBg} rounded-full flex items-center justify-center flex-shrink-0`}>
      {color === 'green' ? (
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      ) : (
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      )}
    </div>
    <div>
      <h3 class={`font-semibold ${c.title} mb-2`}>{title}</h3>
      <p class={c.text}>{text}</p>
    </div>
  </div>
</div>
