---
import Breadcrumb from './Breadcrumb.astro';
import Icon from './Icons.astro';
import type { Agent } from '../data/types';

interface Props {
  lang?: 'es' | 'en' | 'fr';
  agents: Agent[];
}

const { lang = 'es', agents } = Astro.props;

const text = {
  es: {
    title: 'Asesor No Disponible',
    heading: 'Este asesor no está activo en este momento',
    description: 'Es posible que haya cambiado de plan o se encuentre temporalmente inactivo. Mientras tanto, aquí tienes otros asesores disponibles en Ubíkala.',
    altTitle: 'Otros asesores en Ubíkala',
    viewAll: 'Ver todos los asesores',
    agentsLink: '/asesores',
    homeLabel: 'Inicio',
    homeLink: '/',
    agentsLabel: 'Asesores',
    properties: 'propiedades',
  },
  en: {
    title: 'Agent Not Available',
    heading: 'This agent is not currently active',
    description: 'They may have changed their plan or are temporarily inactive. Meanwhile, here are other agents available on Ubíkala.',
    altTitle: 'Other agents on Ubíkala',
    viewAll: 'View all agents',
    agentsLink: '/en/agents',
    homeLabel: 'Home',
    homeLink: '/en',
    agentsLabel: 'Agents',
    properties: 'properties',
  },
  fr: {
    title: 'Agent Non Disponible',
    heading: 'Cet agent n\'est pas actif pour le moment',
    description: 'Il a peut-être changé de plan ou est temporairement inactif. En attendant, voici d\'autres agents disponibles sur Ubíkala.',
    altTitle: 'Autres agents sur Ubíkala',
    viewAll: 'Voir tous les agents',
    agentsLink: '/fr/agents',
    homeLabel: 'Accueil',
    homeLink: '/fr',
    agentsLabel: 'Agents',
    properties: 'propriétés',
  },
};

const t = text[lang];
---

<Breadcrumb items={[
  { label: t.homeLabel, href: t.homeLink },
  { label: t.agentsLabel, href: t.agentsLink },
  { label: t.title }
]} />

<section class="py-16 bg-gray-50">
  <div class="container-custom text-center">
    <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{t.heading}</h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">{t.description}</p>
  </div>
</section>

{agents.length > 0 && (
  <section class="section">
    <div class="container-custom">
      <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">{t.altTitle}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {agents.map((agent) => {
          const hasPhoto = agent.photo && !agent.photo.includes('placeholder');
          const initials = agent.name.split(' ').map(n => n[0]).slice(0, 2).join('');
          const agentHref = lang === 'es' ? `/asesor/${agent.slug}` : lang === 'en' ? `/en/agent/${agent.slug}` : `/fr/agent/${agent.slug}`;
          return (
            <a href={agentHref} class="card p-6 hover:shadow-lg transition-shadow block">
              <div class="flex items-center gap-4 mb-3">
                {hasPhoto ? (
                  <img src={agent.photo} alt={agent.name} class="w-16 h-16 rounded-full object-cover" loading="lazy" />
                ) : (
                  <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
                    <span class="text-white text-xl font-bold">{initials}</span>
                  </div>
                )}
                <div>
                  <h3 class="font-semibold text-gray-900">{agent.name}</h3>
                  {agent.company && <p class="text-sm text-gray-500">{agent.company}</p>}
                </div>
              </div>
              <div class="text-sm text-gray-600">
                {agent.propertiesCount} {t.properties}
              </div>
            </a>
          );
        })}
      </div>
      <div class="text-center mt-8">
        <a href={t.agentsLink} class="btn-primary">{t.viewAll}</a>
      </div>
    </div>
  </section>
)}
