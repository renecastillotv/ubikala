      <!-- Property Types -->
      <div>
        <h4 class="text-white font-semibold mb-6">{t.footer.propertyTypes}</h4>
        <ul class="space-y-3">
          <li>
            <a href={`${urls.buy}/casas`} class="hover:text-primary-300 transition-colors">{t.propertyTypes.house}</a>
