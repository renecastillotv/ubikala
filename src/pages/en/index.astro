---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import FeaturedProperties from '../../components/FeaturedProperties.astro';
import LocationsGrid from '../../components/LocationsGrid.astro';
import CTASection from '../../components/CTASection.astro';
import { useTranslations } from '../../i18n';

const t = useTranslations('en');
const pais = Astro.locals.country.name;
---

<Layout
  title={t.pages.home.title}
  description={t.pages.home.description}
  keywords={t.meta.keywords}
  alternateLanguages={[
    { lang: 'es', url: 'https://ubikala.com/' },
    { lang: 'fr', url: 'https://ubikala.com/fr/' }
  ]}
>
  <Hero pais={pais} />
  <FeaturedProperties pais={pais} />
  <LocationsGrid pais={pais} />

  <!-- Why Choose Us -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">
          {t.sections.whyChooseUs}
        </span>
        <h2 class="section-title mt-2">
          {t.sections.portalTitle}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.sections.smartSearch}</h3>
          <p class="text-gray-600">
            {t.sections.smartSearchDesc}
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-secondary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.sections.verifiedProperties}</h3>
          <p class="text-gray-600">
            {t.sections.verifiedPropertiesDesc}
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-accent-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.sections.expertAgents}</h3>
          <p class="text-gray-600">
            {t.sections.expertAgentsDesc}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Dominican Republic -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">Your Next Home Awaits</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">
          Real Estate in the Dominican Republic
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto mt-4">
          Welcome to Ub&iacute;kala ‚Äî your gateway to Caribbean living. From sun-drenched beachfront villas to vibrant city apartments,
          discover thousands of verified properties across the most sought-after destinations in the Dominican Republic.
        </p>
      </div>

      <!-- Investment Benefits -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-6 border border-primary-100">
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Open to Everyone</h3>
          <p class="text-sm text-gray-600">No restrictions for foreign buyers. Purchase property with the same rights as Dominican citizens.</p>
        </div>

        <div class="bg-gradient-to-br from-secondary-50 to-white rounded-2xl p-6 border border-secondary-100">
          <div class="w-12 h-12 bg-secondary-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Strong Returns</h3>
          <p class="text-sm text-gray-600">The booming tourism market drives excellent rental income, especially in Punta Cana and coastal areas.</p>
        </div>

        <div class="bg-gradient-to-br from-accent-50 to-white rounded-2xl p-6 border border-accent-100">
          <div class="w-12 h-12 bg-accent-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Affordable Prices</h3>
          <p class="text-sm text-gray-600">Get more for your investment compared to other Caribbean destinations like the Bahamas or Turks & Caicos.</p>
        </div>

        <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-6 border border-primary-100">
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Year-Round Paradise</h3>
          <p class="text-sm text-gray-600">Enjoy 300+ days of sunshine every year. The perfect climate for your vacation home or permanent residence.</p>
        </div>
      </div>

      <!-- Popular Destinations -->
      <div class="bg-gray-50 rounded-3xl p-8 md:p-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Where Will You Call Home?</h3>
        <p class="text-gray-600 mb-8">Each corner of the Dominican Republic tells a different story. Find the one that matches yours.</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <a href="/en/properties/punta-cana" class="flex items-start gap-4 group">
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center flex-shrink-0 group-hover:shadow-md transition-shadow">
              <span class="text-lg">üèñÔ∏è</span>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Punta Cana</h4>
              <p class="text-sm text-gray-600">The Caribbean's top tourist destination. Beachfront condos, luxury villas, and vacation rentals with outstanding ROI.</p>
            </div>
          </a>
          <a href="/en/properties/santo-domingo" class="flex items-start gap-4 group">
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center flex-shrink-0 group-hover:shadow-md transition-shadow">
              <span class="text-lg">üèôÔ∏è</span>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Santo Domingo</h4>
              <p class="text-sm text-gray-600">The vibrant capital. Modern apartments in Piantini and Naco, family homes in Arroyo Hondo, and investment properties for every budget.</p>
            </div>
          </a>
          <a href="/en/properties/santiago" class="flex items-start gap-4 group">
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center flex-shrink-0 group-hover:shadow-md transition-shadow">
              <span class="text-lg">üèîÔ∏è</span>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Santiago</h4>
              <p class="text-sm text-gray-600">The cultural heart of the Cibao. Affordable prices, growing infrastructure, and a warm community lifestyle.</p>
            </div>
          </a>
          <a href="/en/properties/las-terrenas" class="flex items-start gap-4 group">
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center flex-shrink-0 group-hover:shadow-md transition-shadow">
              <span class="text-lg">üå¥</span>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Las Terrenas</h4>
              <p class="text-sm text-gray-600">A bohemian paradise on the Samana peninsula. Walk-to-beach properties and a thriving international community.</p>
            </div>
          </a>
        </div>
        <div class="mt-8 text-center">
          <a href="/en/properties" class="text-primary-600 font-semibold hover:text-primary-700 inline-flex items-center gap-2">
            Explore all locations
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <CTASection />
</Layout>
