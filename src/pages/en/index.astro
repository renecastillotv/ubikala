---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import FeaturedProperties from '../../components/FeaturedProperties.astro';
import LocationsGrid from '../../components/LocationsGrid.astro';
import CTASection from '../../components/CTASection.astro';
import { useTranslations } from '../../i18n';
import { getCitiesWithCounts } from '../../lib/meilisearch';
import SEOBenefits from '../../components/SEOBenefits.astro';
import { getBenefitsContent, getDestinations, getDestinationsHeader, getHeroContent } from '../../lib/seo-content-db';

const t = useTranslations('en');
const country = Astro.locals.country;
const pais = country.name;

const searchLocations = await getCitiesWithCounts(pais);
const benefits = await getBenefitsContent(country.code, 'en', pais);
const destinations = await getDestinations(country.code, 'en', pais);
const destHeader = await getDestinationsHeader(country.code, 'en', pais);
const homeHero = await getHeroContent(country.code, 'en', 'home', pais);
---

<Layout
  title={t.pages.home.title}
  description={t.pages.home.description}
  keywords={t.meta.keywords}
  alternateLanguages={[
    { lang: 'es', url: 'https://ubikala.com/' },
    { lang: 'fr', url: 'https://ubikala.com/fr/' }
  ]}
>
  <Hero pais={pais} locations={searchLocations} />
  <FeaturedProperties pais={pais} />
  <LocationsGrid pais={pais} />

  <!-- Why Choose Us -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">
          {t.sections.whyChooseUs}
        </span>
        <h2 class="section-title mt-2">
          {t.sections.portalTitle}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.sections.smartSearch}</h3>
          <p class="text-gray-600">
            {t.sections.smartSearchDesc}
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-secondary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.sections.verifiedProperties}</h3>
          <p class="text-gray-600">
            {t.sections.verifiedPropertiesDesc}
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-accent-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.sections.expertAgents}</h3>
          <p class="text-gray-600">
            {t.sections.expertAgentsDesc}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Dominican Republic -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      {homeHero && (
        <div class="text-center mb-12">
          <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">Your Next Home Awaits</span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">{homeHero.title}</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mt-4">{homeHero.description}</p>
        </div>
      )}

      {benefits.length > 0 && <div class="mb-16"><SEOBenefits benefits={benefits} /></div>}

      {destinations.length > 0 && destHeader && (
        <div class="bg-gray-50 rounded-3xl p-8 md:p-12">
          <h3 class="text-2xl font-bold text-gray-900 mb-2">{destHeader.title}</h3>
          {destHeader.subtitle && <p class="text-gray-600 mb-8">{destHeader.subtitle}</p>}
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {destinations.map(dest => (
              <a href={dest.link} class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center flex-shrink-0 group-hover:shadow-md transition-shadow">
                  <span class="text-lg">{dest.emoji}</span>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">{dest.name}</h4>
                  <p class="text-sm text-gray-600">{dest.description}</p>
                </div>
              </a>
            ))}
          </div>
          <div class="mt-8 text-center">
            <a href="/en/properties" class="text-primary-600 font-semibold hover:text-primary-700 inline-flex items-center gap-2">
              Explore all locations
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
            </a>
          </div>
        </div>
      )}
    </div>
  </section>

  <CTASection />
</Layout>
