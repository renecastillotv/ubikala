---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icons.astro';
import { useTranslations, getAlternateUrls } from '../../i18n';
import { getPlatformStats, formatStatNumber } from '../../lib/platform-stats';

const t = useTranslations('en');
const alternateUrls = getAlternateUrls('/en/about');

let stats = { totalProperties: 0, totalAgents: 0, cities: 0 };
try {
  const platformStats = await getPlatformStats();
  stats = { totalProperties: platformStats.totalProperties, totalAgents: platformStats.totalAgents, cities: platformStats.cities };
} catch (error) {
  console.error('Error fetching platform stats:', error);
}
---

<Layout
  title="About Ubikala | Your Trusted Real Estate Portal"
  description="Learn about Ubikala, the portal connecting buyers and tenants with real estate agents, agencies and property owners."
  keywords="real estate portal, about ubikala, who we are, real estate"
  alternateLanguages={alternateUrls}
>
  <!-- Breadcrumb -->
  <div class="bg-gray-100 py-4">
    <div class="container-custom">
      <nav class="flex text-sm text-gray-600">
        <a href="/en" class="hover:text-primary-600">{t.nav.home}</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium">{t.nav.about}</span>
      </nav>
    </div>
  </div>

  <!-- Hero -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 py-16">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Your Trusted Real Estate Portal
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto">
        We connect property seekers with the professionals who offer them.
        A space for agents, real estate agencies, and property owners.
      </p>
    </div>
  </section>

  <!-- What is PropiedadEnRD -->
  <section class="section">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">
            What is Ubikala?
          </span>
          <h2 class="section-title mt-2 mb-6">
            An Open Portal for the Real Estate Market
          </h2>
          <div class="prose prose-lg text-gray-600">
            <p>
              <strong>Ubikala</strong> is a platform where independent real estate agents,
              established agencies, and private property owners can list their properties to
              reach thousands of potential buyers and tenants.
            </p>
            <p>
              We are not a real estate agency. We are the meeting point between supply and demand
              in the real estate market. Each listed property belongs to a verified agent
              or owner who will assist you directly.
            </p>
            <p>
              Whether you're looking to buy your first home, rent an
              apartment, or sell your property, you'll find the right tools
              and professionals here.
            </p>
          </div>
        </div>
        <div>
          <img
            src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=600&h=500&fit=crop"
            alt="Real estate portal"
            class="rounded-2xl shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- For Whom -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title">Who Is This Portal For?</h2>
        <p class="section-subtitle mx-auto">
          Designed to serve all players in the real estate market
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Buyers -->
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="search" class="w-8 h-8 text-primary-600" />
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Buyers</h3>
          <p class="text-gray-600 text-sm">
            Explore thousands of properties and connect directly with the agent or owner.
          </p>
        </div>

        <!-- Tenants -->
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="house" class="w-8 h-8 text-secondary-600" />
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Tenants</h3>
          <p class="text-gray-600 text-sm">
            Find apartments and houses for rent throughout the country.
          </p>
        </div>

        <!-- Agents -->
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="user" class="w-8 h-8 text-accent-600" />
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Agents</h3>
          <p class="text-gray-600 text-sm">
            List your properties and receive contacts from interested clients.
          </p>
        </div>

        <!-- Agencies -->
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="building" class="w-8 h-8 text-purple-600" />
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Agencies</h3>
          <p class="text-gray-600 text-sm">
            Manage your inventory and increase your company's visibility.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title">How Does It Work?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-600 text-white rounded-full flex items-center justify-center mx-auto mb-6 text-3xl font-bold">
            1
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Search or List</h3>
          <p class="text-gray-600">
            Buyers search for properties. Agents and owners list them with photos and complete details.
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-primary-600 text-white rounded-full flex items-center justify-center mx-auto mb-6 text-3xl font-bold">
            2
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Connect</h3>
          <p class="text-gray-600">
            The interested party contacts the agent or owner directly by phone, WhatsApp, or form.
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-secondary-600 text-white rounded-full flex items-center justify-center mx-auto mb-6 text-3xl font-bold">
            3
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Close the Deal</h3>
          <p class="text-gray-600">
            Visit the property, negotiate, and close directly with the seller. We facilitate the connection.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Numbers -->
  <section class="py-16 bg-primary-600">
    <div class="container-custom">
      <div class="grid grid-cols-3 gap-8 text-center max-w-3xl mx-auto">
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">{formatStatNumber(stats.totalProperties)}</div>
          <div class="text-primary-200">Active Properties</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">{formatStatNumber(stats.totalAgents)}</div>
          <div class="text-primary-200">Registered Agents</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">{formatStatNumber(stats.cities)}</div>
          <div class="text-primary-200">Cities</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="card p-8 text-center border-2 border-primary-100 hover:border-primary-500 transition-colors">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Looking for a Property?</h3>
          <p class="text-gray-600 mb-6">
            Explore our catalog and find your next home or investment.
          </p>
          <a href="/en/buy" class="btn-primary">
            View Properties
          </a>
        </div>

        <div class="card p-8 text-center border-2 border-secondary-100 hover:border-secondary-500 transition-colors">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Want to List?</h3>
          <p class="text-gray-600 mb-6">
            Register your account and start receiving client contacts.
          </p>
          <a href="/en/list" class="btn-secondary">
            List Property
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
