---
import Layout from '../../layouts/Layout.astro';
import PropertyCard from '../../components/PropertyCard.astro';
import SearchBox from '../../components/SearchBox.astro';
import Pagination from '../../components/Pagination.astro';
import { useTranslations, getAlternateUrls } from '../../i18n';
import { searchProperties, getMarketStats } from '../../lib/meilisearch';
import MarketStatsBar from '../../components/MarketStatsBar.astro';
import type { Property } from '../../data/types';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getPageFAQs, getPopularZones, getPropertyTypes, getInfoBox, getEducationalCards, getGuideHeader, getCTAContent, getFAQSchema } from '../../lib/seo-content-db';
import SEOPopularZones from '../../components/SEOPopularZones.astro';
import SEOPropertyTypes from '../../components/SEOPropertyTypes.astro';
import SEOInfoBox from '../../components/SEOInfoBox.astro';
import SEOEducationalCards from '../../components/SEOEducationalCards.astro';
import SEOFAQSection from '../../components/SEOFAQSection.astro';

// SSR for pagination
export const prerender = false;

const t = useTranslations('en');
const country = Astro.locals.country;
const pais = country.name;
const alternateUrls = getAlternateUrls('/en/buy');

// Pagination config
const ITEMS_PER_PAGE = 24;
const currentPage = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1'));

// Fetch properties from MeiliSearch with pagination
let properties: Property[] = [];
let totalCount = 0;
try {
  const offset = (currentPage - 1) * ITEMS_PER_PAGE;
  const result = await searchProperties({ operacion: 'venta', limit: ITEMS_PER_PAGE, offset, pais });
  properties = result.properties;
  totalCount = result.total;
} catch (error) {
  console.error('Error fetching properties:', error);
}

const totalPages = Math.ceil(totalCount / ITEMS_PER_PAGE);

let marketStats = null;
try { marketStats = await getMarketStats(pais); } catch {}

// DB-driven SEO content
const faqs = await getPageFAQs(country.code, 'en', 'buy', pais);
const zones = await getPopularZones(country.code, 'en', 'buy', pais);
const propertyTypes = await getPropertyTypes(country.code, 'en', pais);
const infoBox = await getInfoBox(country.code, 'en', 'buy', pais);
const eduCards = await getEducationalCards(country.code, 'en', pais);
const guideHeader = await getGuideHeader(country.code, 'en', 'buy', pais);
const cta = await getCTAContent(country.code, 'en', 'buy', pais);

if (currentPage > totalPages && totalPages > 0) {
  return Astro.redirect('/en/buy');
}

const pageTitle = t.pages.buy.title;
const pageDescription = t.pages.buy.description;

// Schema.org ItemList for property listings
const listingSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: `Properties for Sale in ${pais}`,
  description: pageDescription,
  numberOfItems: totalCount,
  itemListElement: properties.slice(0, 10).map((property, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    item: {
      '@type': 'RealEstateListing',
      name: property.title,
      description: property.description.substring(0, 160),
      url: `https://ubikala.com/en/property/${property.slug}`,
      image: property.images[0]?.url,
      offers: {
        '@type': 'Offer',
        price: property.price,
        priceCurrency: property.currency,
      },
    },
  })),
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={t.meta.keywords}
  alternateLanguages={alternateUrls}
>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(listingSchema)} slot="head" />

  <Breadcrumb items={[
    { label: t.nav.home, href: '/en' },
    { label: t.nav.buy }
  ]} />

  <!-- Hero -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 py-12">
    <div class="container-custom">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Properties for Sale in {pais}
      </h1>
      <p class="text-primary-100 text-lg max-w-3xl">
        Explore our selection of houses, apartments, villas, land and commercial properties available for purchase throughout the country.
      </p>
    </div>
  </section>

  <!-- Search -->
  <section class="py-8 bg-white shadow-sm sticky top-16 z-40">
    <div class="container-custom">
      <SearchBox variant="inline" />
    </div>
  </section>

  <!-- Results -->
  <section class="section">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-8">
        <p class="text-gray-600">
          <span class="font-semibold text-gray-900">{totalCount}</span> {t.filters.results}
        </p>
        <select class="select py-2 text-sm w-auto">
          <option value="recent">Most Recent</option>
          <option value="price-asc">Price: Low to High</option>
          <option value="price-desc">Price: High to Low</option>
        </select>
      </div>

      {properties.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {properties.map((property) => (
            <PropertyCard property={property} />
          ))}
        </div>
      ) : (
        <div class="card p-12 text-center">
          <p class="text-gray-600">No properties found.</p>
        </div>
      )}

      <!-- Pagination -->
      {properties.length > 0 && (
        <div class="mt-12">
          <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/en/buy" />
        </div>
      )}
    </div>
  </section>

  <!-- SEO Content -->
  <section class="py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="container-custom">
      {guideHeader && (
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{guideHeader.title}</h2>
          {guideHeader.subtitle && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{guideHeader.subtitle}</p>}
        </div>
      )}

      {marketStats && <div class="mb-16"><MarketStatsBar stats={marketStats} operacion="venta" lang="en" countryName={pais} /></div>}

      {(zones.length > 0 || propertyTypes.length > 0) && (
        <div class="grid md:grid-cols-2 gap-12 mb-16">
          {zones.length > 0 && <SEOPopularZones zones={zones} title="Popular Areas for Buying" />}
          {propertyTypes.length > 0 && <SEOPropertyTypes types={propertyTypes} />}
        </div>
      )}

      {infoBox && <div class="mb-16"><SEOInfoBox title={infoBox.title} text={infoBox.text} color="green" /></div>}
    </div>
  </section>

  {faqs.length > 0 && <SEOFAQSection faqs={faqs} title="Frequently Asked Questions About Buying" />}

  {eduCards.length > 0 && (
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <SEOEducationalCards cards={eduCards} />
      </div>
    </section>
  )}

  <!-- CTA -->
  {cta ? (
    <section class="py-12 bg-gradient-to-r from-primary-600 to-primary-700">
      <div class="container-custom text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">{cta.title}</h2>
        <p class="text-primary-100 mb-6 max-w-xl mx-auto">{cta.description}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/en/agents" class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Browse Agents
          </a>
          <a href="/en/contact" class="inline-flex items-center justify-center gap-2 bg-primary-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-400 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </section>
  ) : (
    <section class="py-12 bg-gradient-to-r from-primary-600 to-primary-700">
      <div class="container-custom text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
          Ready to find your ideal property?
        </h2>
        <p class="text-primary-100 mb-6 max-w-xl mx-auto">
          Our verified agents will help you navigate the {pais} real estate market and find the perfect property for your needs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/en/agents" class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Browse Agents
          </a>
          <a href="/en/contact" class="inline-flex items-center justify-center gap-2 bg-primary-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-400 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Schema -->
  {faqs.length > 0 && <script is:inline type="application/ld+json" set:html={JSON.stringify(getFAQSchema(faqs))} />}
</Layout>
