    }
  </style>

  <script>
    const modal = document.getElementById('plan-modal');
    const closeModalBtn = document.getElementById('close-modal');
    const cancelPlanBtn = document.getElementById('cancel-plan-btn');
    const confirmPlanBtn = document.getElementById('confirm-plan-btn');
    const selectedPlanNameEl = document.getElementById('selected-plan-name');
    const promoCodeInput = document.getElementById('promo-code') as HTMLInputElement;
    const applyPromoBtn = document.getElementById('apply-promo-btn');
    const promoMessage = document.getElementById('promo-message');

    let selectedPlanId: string | null = null;

    // Plan selection
    document.querySelectorAll('.select-plan-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        selectedPlanId = btn.getAttribute('data-plan-id');
        const planName = btn.getAttribute('data-plan-name');
        if (selectedPlanNameEl) selectedPlanNameEl.textContent = planName || '';
        modal?.classList.remove('hidden');
      });
    });

    // Close modal
    [closeModalBtn, cancelPlanBtn].forEach(btn => {
      btn?.addEventListener('click', () => {
        modal?.classList.add('hidden');
        selectedPlanId = null;
      });
    });

    document.querySelector('.modal-backdrop')?.addEventListener('click', () => {
      modal?.classList.add('hidden');
      selectedPlanId = null;
    });

    // Confirm plan change
    confirmPlanBtn?.addEventListener('click', async () => {
      if (!selectedPlanId) return;

      confirmPlanBtn.disabled = true;
      confirmPlanBtn.textContent = 'Procesando...';

      try {
        const response = await fetch('/api/admin/account/plan', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ plan_id: selectedPlanId }),
        });

        const result = await response.json();
        if (!response.ok) throw new Error(result.error || 'Error al cambiar plan');

        window.location.reload();
      } catch (error: any) {
        alert(error.message);
        confirmPlanBtn.disabled = false;
        confirmPlanBtn.textContent = 'Confirmar Cambio';
      }
    });

    // Apply promo code
    applyPromoBtn?.addEventListener('click', async () => {
      const code = promoCodeInput?.value.trim();
      if (!code) {
        promoMessage!.textContent = 'Por favor ingresa un código';
        promoMessage!.className = 'promo-message error';
        return;
      }

      applyPromoBtn.disabled = true;
      applyPromoBtn.textContent = 'Validando...';

      try {
        const response = await fetch('/api/validate-promo-code', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ code }),
        });

        const result = await response.json();

        if (!response.ok) {
          promoMessage!.textContent = result.error || 'Código inválido';
          promoMessage!.className = 'promo-message error';
        } else {
          const promo = result.promoCode;
          let discountText = '';
          if (promo.discount_type === 'percentage') {
            discountText = `${promo.discount_value}% de descuento`;
          } else if (promo.discount_type === 'fixed') {
            discountText = `$${promo.discount_value} de descuento`;
          } else if (promo.discount_type === 'trial_days') {
            discountText = `${promo.discount_value} días de prueba gratis`;
          } else if (promo.discount_type === 'free_months') {
            discountText = `${promo.discount_value} meses gratis`;
          }
          promoMessage!.textContent = `Código válido: ${discountText}`;
          promoMessage!.className = 'promo-message success';
        }
      } catch (error: any) {
        promoMessage!.textContent = 'Error al validar código';
        promoMessage!.className = 'promo-message error';
      } finally {
        applyPromoBtn.disabled = false;
        applyPromoBtn.textContent = 'Aplicar';
      }
    });
  </script>
