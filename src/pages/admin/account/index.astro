---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getUserWithPlan, getUserConsumption, getPlansByRole, getRoleLabel, type UserRole, type UbikalaPlan } from '../../../lib/ubikala-db';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/admin/login');
}

const fullUser = await getUserWithPlan(user.id);
const consumption = await getUserConsumption(user.id);

// Detect team member (child of inmobiliaria)
const isTeamMember = fullUser?.parent_user_id !== null && fullUser?.parent_user_id !== undefined;
let parentPlan: UbikalaPlan | null = null;
if (isTeamMember && fullUser?.parent_user_id) {
  const parent = await getUserWithPlan(fullUser.parent_user_id);
  parentPlan = parent?.plan || null;
}

const availablePlans = fullUser ? await getPlansByRole(fullUser.role) : [];
const currentPlan = isTeamMember ? parentPlan : fullUser?.plan;

// Filter out current plan from available plans (not shown for team members)
const otherPlans = isTeamMember ? [] : availablePlans.filter(p => p.id !== currentPlan?.id && p.is_active);
---

<AdminLayout title="Mi Cuenta">
  <div class="account-page">
    <div class="page-header">
      <h2>Mi Cuenta</h2>
      <p class="subtitle">Gestiona tu plan y suscripción</p>
    </div>

    <div class="account-grid">
      <!-- Current Plan Card -->
      <div class="card plan-card current">
        <div class="plan-header">
          <div class="plan-badge current">{isTeamMember ? 'Miembro de Inmobiliaria' : 'Plan Actual'}</div>
          <h3>{currentPlan?.name || 'Sin Plan'}</h3>
          {currentPlan && !isTeamMember && (
            <div class="plan-price">
              <span class="price">${Number(currentPlan.price).toFixed(2)}</span>
              <span class="period">/mes</span>
            </div>
          )}
        </div>

        {isTeamMember && (
          <div class="team-member-notice">
            <p>Tu plan es gestionado por tu inmobiliaria. Los beneficios del plan aplican a tu cuenta automáticamente.</p>
          </div>
        )}

        {currentPlan ? (
          <div class="plan-details">
            <h4>Incluye:</h4>
            <ul class="features-list">
              <li>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12" />
                </svg>
                {currentPlan.max_publications === 0 ? 'Publicaciones ilimitadas' : `${currentPlan.max_publications} publicaciones`}
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12" />
                </svg>
                {currentPlan.publication_duration_days} días de duración por publicación
              </li>
              {currentPlan.max_team_members !== null && !isTeamMember && (
                <li>
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                  {currentPlan.max_team_members === 0 ? 'Miembros de equipo ilimitados' : `${currentPlan.max_team_members} miembros de equipo`}
                </li>
              )}
              {currentPlan.max_leads_per_month !== null && (
                <li>
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                  {currentPlan.max_leads_per_month === 0 ? 'Leads ilimitados' : `${currentPlan.max_leads_per_month} leads/mes`}
                </li>
              )}
            </ul>
          </div>
        ) : (
          <div class="no-plan">
            <p>{isTeamMember ? 'Tu inmobiliaria no tiene un plan activo actualmente.' : 'No tienes un plan activo. Selecciona uno de los planes disponibles para comenzar.'}</p>
          </div>
        )}
      </div>

      <!-- Usage Stats -->
      <div class="card stats-card">
        <h3>Mi Consumo</h3>
        <div class="stats-list">
          <div class="stat-item">
            <div class="stat-header">
              <span class="stat-label">Publicaciones</span>
              <span class="stat-value">
                {consumption.publications_used} / {consumption.publications_limit === null ? '∞' : consumption.publications_limit}
              </span>
            </div>
            <div class="progress-bar">
              <div
                class="progress-fill"
                style={`width: ${consumption.publications_limit ? Math.min((consumption.publications_used / consumption.publications_limit) * 100, 100) : 0}%`}
              ></div>
            </div>
            {consumption.publications_limit && consumption.publications_used >= consumption.publications_limit && (
              <p class="limit-warning">Has alcanzado el límite de publicaciones</p>
            )}
          </div>

          {consumption.leads_limit !== null && (
            <div class="stat-item">
              <div class="stat-header">
                <span class="stat-label">Leads este mes</span>
                <span class="stat-value">
                  {consumption.leads_generated} / {consumption.leads_limit === null ? '∞' : consumption.leads_limit}
                </span>
              </div>
              <div class="progress-bar purple">
                <div
                  class="progress-fill"
                  style={`width: ${consumption.leads_limit ? Math.min((consumption.leads_generated / consumption.leads_limit) * 100, 100) : 0}%`}
                ></div>
              </div>
            </div>
          )}

          {consumption.team_limit !== null && fullUser?.role === 'inmobiliaria' && (
            <div class="stat-item">
              <div class="stat-header">
                <span class="stat-label">Miembros de equipo</span>
                <span class="stat-value">
                  {consumption.team_used || 0} / {consumption.team_limit === null ? '∞' : consumption.team_limit}
                </span>
              </div>
              <div class="progress-bar green">
                <div
                  class="progress-fill"
                  style={`width: ${consumption.team_limit ? Math.min(((consumption.team_used || 0) / consumption.team_limit) * 100, 100) : 0}%`}
                ></div>
              </div>
            </div>
          )}
        </div>
      </div>

      <!-- Available Plans (hidden for team members) -->
      {!isTeamMember && otherPlans.length > 0 && (
        <div class="card plans-card">
          <h3>Otros Planes Disponibles</h3>
          <p class="section-subtitle">Actualiza tu plan para obtener más beneficios</p>

          <div class="plans-grid">
            {otherPlans.map(plan => (
              <div class="plan-option">
                <div class="plan-option-header">
                  <h4>{plan.name}</h4>
                  <div class="plan-option-price">
                    <span class="price">${Number(plan.price).toFixed(2)}</span>
                    <span class="period">/mes</span>
                  </div>
                </div>
                <ul class="plan-option-features">
                  <li>{plan.max_publications === 0 ? 'Publicaciones ilimitadas' : `${plan.max_publications} publicaciones`}</li>
                  <li>{plan.publication_duration_days} días por publicación</li>
                  {plan.max_team_members !== null && (
                    <li>{plan.max_team_members === 0 ? 'Equipo ilimitado' : `${plan.max_team_members} miembros`}</li>
                  )}
                  {plan.max_leads_per_month !== null && (
                    <li>{plan.max_leads_per_month === 0 ? 'Leads ilimitados' : `${plan.max_leads_per_month} leads/mes`}</li>
                  )}
                </ul>
                <button class="btn-outline select-plan-btn" data-plan-id={plan.id} data-plan-name={plan.name}>
                  Seleccionar Plan
                </button>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Promo Code (hidden for team members) -->
      {!isTeamMember && <div class="card promo-card">
        <h3>Código Promocional</h3>
        <p class="section-subtitle">¿Tienes un código de descuento?</p>
        <div class="promo-input-group">
          <input type="text" id="promo-code" placeholder="Ingresa tu código" />
          <button type="button" id="apply-promo-btn" class="btn-primary">Aplicar</button>
        </div>
        <div id="promo-message" class="promo-message hidden"></div>
      </div>}

      <!-- Account Info -->
      <div class="card account-info-card">
        <h3>Información de Cuenta</h3>
        <div class="account-info-list">
          <div class="account-info-item">
            <span class="info-label">Email</span>
            <span class="info-value">{fullUser?.email}</span>
          </div>
          <div class="account-info-item">
            <span class="info-label">Tipo de cuenta</span>
            <span class="info-value">{getRoleLabel(fullUser?.role as UserRole)}</span>
          </div>
          <div class="account-info-item">
            <span class="info-label">Estado de verificación</span>
            <span class:list={['verification-status', fullUser?.is_verified ? 'verified' : 'unverified']}>
              {fullUser?.is_verified ? 'Verificado' : 'No verificado'}
            </span>
          </div>
          <div class="account-info-item">
            <span class="info-label">Miembro desde</span>
            <span class="info-value">{fullUser?.created_at ? new Date(fullUser.created_at).toLocaleDateString('es-DO', { year: 'numeric', month: 'long' }) : 'N/A'}</span>
          </div>
        </div>
        {!fullUser?.is_verified && (
          <a href="/admin/verification" class="btn-outline full-width mt-1">
            Verificar mi cuenta
          </a>
        )}
      </div>
    </div>
  </div>

  <!-- Plan Selection Modal -->
  <div id="plan-modal" class="modal hidden">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <div class="modal-header">
        <h3>Cambiar Plan</h3>
        <button class="modal-close" id="close-modal">&times;</button>
      </div>
      <div class="modal-body">
        <p>¿Estás seguro que deseas cambiar a <strong id="selected-plan-name"></strong>?</p>
        <p class="modal-note">El cambio se aplicará inmediatamente.</p>
      </div>
      <div class="modal-footer">
        <button class="btn-outline" id="cancel-plan-btn">Cancelar</button>
        <button class="btn-primary" id="confirm-plan-btn">Confirmar Cambio</button>
      </div>
    </div>
  </div>

  <style>
