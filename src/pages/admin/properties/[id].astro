  <script define:vars={{ locationDataJson: JSON.stringify(locationData), existingImagesJson: JSON.stringify(existingImages), currentPrincipal: property.imagen_principal || '' }}>
    // Parse location data from server
    const locationData = JSON.parse(locationDataJson);

    // Helper functions for cascading dropdowns
    function getCitiesByProvince(provinceName) {
      const province = locationData.provinces.find(
        p => p.name.toLowerCase() === provinceName.toLowerCase()
      );
      return province ? province.cities.map(c => c.name) : [];
    }

    function getSectorsByCity(provinceName, cityName) {
      const province = locationData.provinces.find(
        p => p.name.toLowerCase() === provinceName.toLowerCase()
      );
      if (!province) return [];
      const city = province.cities.find(
        c => c.name.toLowerCase() === cityName.toLowerCase()
      );
      return city ? city.sectors : [];
    }

    const provinciaSelect = document.getElementById('provincia');
    const ciudadSelect = document.getElementById('ciudad');
    const sectorSelect = document.getElementById('sector');

    // Handle province change
    provinciaSelect.addEventListener('change', () => {
      const selectedProvince = provinciaSelect.value;

      // Reset and enable city dropdown
      ciudadSelect.innerHTML = '<option value="">Seleccionar ciudad...</option>';
      sectorSelect.innerHTML = '<option value="">Primero selecciona ciudad</option>';
      sectorSelect.disabled = true;

      if (selectedProvince) {
        const cities = getCitiesByProvince(selectedProvince);
        cities.forEach(city => {
          const option = document.createElement('option');
          option.value = city;
          option.textContent = city;
          ciudadSelect.appendChild(option);
        });
        ciudadSelect.disabled = false;
      } else {
        ciudadSelect.disabled = true;
      }
    });

    // Handle city change
    ciudadSelect.addEventListener('change', () => {
      const selectedProvince = provinciaSelect.value;
      const selectedCity = ciudadSelect.value;

      // Reset and enable sector dropdown
      sectorSelect.innerHTML = '<option value="">Seleccionar sector...</option>';

      if (selectedProvince && selectedCity) {
        const sectors = getSectorsByCity(selectedProvince, selectedCity);
        sectors.forEach(sector => {
          const option = document.createElement('option');
          option.value = sector;
          option.textContent = sector;
          sectorSelect.appendChild(option);
        });
        sectorSelect.disabled = false;
      } else {
        sectorSelect.innerHTML = '<option value="">Primero selecciona ciudad</option>';
        sectorSelect.disabled = true;
      }
    });

    // Photo Upload Handling
    const uploadArea = document.getElementById('upload-area');
    const photoInput = document.getElementById('photo-input');
    const photoPreviewGrid = document.getElementById('photo-preview-grid');
    const imagenesInput = document.getElementById('imagenes');
    let uploadedImages = JSON.parse(existingImagesJson) || [];

    // Image compression function
    async function compressImage(file, maxWidth = 1200, maxHeight = 1200, quality = 0.8) {
      return new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.onload = (e) => {
          const img = new Image();
          img.onload = () => {
            const canvas = document.createElement('canvas');
            let width = img.width;
            let height = img.height;

            // Calculate new dimensions
            if (width > maxWidth) {
              height = Math.round((height * maxWidth) / width);
              width = maxWidth;
            }
            if (height > maxHeight) {
              width = Math.round((width * maxHeight) / height);
              height = maxHeight;
            }

            canvas.width = width;
            canvas.height = height;

            const ctx = canvas.getContext('2d');
            ctx.drawImage(img, 0, 0, width, height);

            canvas.toBlob(
              (blob) => {
                if (blob) {
                  resolve(new File([blob], file.name, { type: 'image/jpeg' }));
                } else {
                  reject(new Error('Error comprimiendo imagen'));
                }
              },
              'image/jpeg',
              quality
            );
          };
          img.onerror = () => reject(new Error('Error cargando imagen'));
          img.src = e.target.result;
        };
        reader.onerror = () => reject(new Error('Error leyendo archivo'));
        reader.readAsDataURL(file);
      });
    }

    // Find primary image index
    let primaryImageIndex = 0;
    if (currentPrincipal && uploadedImages.length > 0) {
      const idx = uploadedImages.indexOf(currentPrincipal);
      if (idx >= 0) primaryImageIndex = idx;
    }

    // Initial render of existing images
    renderPreviews();

    // Click to upload
    uploadArea.addEventListener('click', () => photoInput.click());

    // Drag and drop
    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      handleFiles(e.dataTransfer.files);
    });

    // File input change
    photoInput.addEventListener('change', () => {
      handleFiles(photoInput.files);
    });

    async function handleFiles(files) {
      for (const file of files) {
        if (!file.type.startsWith('image/')) continue;
        if (file.size > 10 * 1024 * 1024) {
          alert(`La imagen ${file.name} es muy grande. Máximo 10MB.`);
          continue;
        }

        // Create preview immediately
        const index = uploadedImages.length;
        const previewEl = createPreviewElement(index, URL.createObjectURL(file), true);
        photoPreviewGrid.appendChild(previewEl);

        // Compress and upload to server
        try {
          // Compress image before upload
          const compressedFile = await compressImage(file);
          console.log(`Compressed ${file.name}: ${(file.size/1024).toFixed(0)}KB -> ${(compressedFile.size/1024).toFixed(0)}KB`);

          const formData = new FormData();
          formData.append('file', compressedFile);

          const response = await fetch('/api/admin/upload/image', {
            method: 'POST',
            body: formData
          });

          if (!response.ok) {
            throw new Error('Error al subir imagen');
          }

          const result = await response.json();
          uploadedImages.push(result.url);
          updateImagenesInput();

          // Update preview with actual URL
          previewEl.classList.remove('uploading');
          previewEl.querySelector('img').src = result.url;
          if (uploadedImages.length === 1) {
            previewEl.classList.add('primary');
            primaryImageIndex = 0;
          }
        } catch (error) {
          console.error('Upload error:', error);
          previewEl.remove();
          alert(`Error al subir ${file.name}`);
        }
      }
    }

    function createPreviewElement(index, src, uploading = false) {
      const div = document.createElement('div');
      div.className = 'photo-preview' + (uploading ? ' uploading' : '') + (index === primaryImageIndex ? ' primary' : '');
      div.dataset.index = index;
      div.innerHTML = `
        <img src="${src}" alt="Foto ${index + 1}" />
        <button type="button" class="remove-photo" title="Eliminar">&times;</button>
        ${index !== primaryImageIndex ? '<button type="button" class="set-primary" title="Establecer como principal">Principal</button>' : ''}
        ${uploading ? '<div class="upload-progress" style="width: 50%"></div>' : ''}
      `;

      // Remove button
      div.querySelector('.remove-photo').addEventListener('click', () => {
        uploadedImages.splice(index, 1);
        if (primaryImageIndex === index) {
          primaryImageIndex = 0;
        } else if (primaryImageIndex > index) {
          primaryImageIndex--;
        }
        renderPreviews();
      });

      // Set primary button
      const setPrimaryBtn = div.querySelector('.set-primary');
      if (setPrimaryBtn) {
        setPrimaryBtn.addEventListener('click', () => {
          primaryImageIndex = index;
          renderPreviews();
        });
      }

      return div;
    }

    function renderPreviews() {
      photoPreviewGrid.innerHTML = '';
      uploadedImages.forEach((url, index) => {
        const previewEl = createPreviewElement(index, url);
        if (index === primaryImageIndex) {
          previewEl.classList.add('primary');
        }
        photoPreviewGrid.appendChild(previewEl);
      });
      updateImagenesInput();
    }

    function updateImagenesInput() {
      imagenesInput.value = JSON.stringify(uploadedImages);
    }

    const form = document.getElementById('property-form');
    const formError = document.getElementById('form-error');
    const submitBtn = document.getElementById('submit-btn');
    const propertyId = document.getElementById('property-id').value;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      formError.classList.add('hidden');
      submitBtn.disabled = true;
      submitBtn.textContent = 'Guardando...';

      const formData = new FormData(form);
      const data = {};

      // Text fields
      ['titulo', 'tipo', 'operacion', 'estado', 'codigo', 'descripcion', 'moneda',
       'provincia', 'ciudad', 'sector', 'direccion', 'video_url', 'tour_virtual_url'
      ].forEach(field => {
        const value = formData.get(field);
        if (value) data[field] = value;
      });

      // Handle images - prioritize uploaded images over URL
      if (uploadedImages.length > 0) {
        data.imagen_principal = uploadedImages[primaryImageIndex] || uploadedImages[0];
        data.imagenes = uploadedImages;
      } else {
        const imgUrl = formData.get('imagen_principal');
        if (imgUrl) {
          data.imagen_principal = imgUrl;
          data.imagenes = [imgUrl];
        }
      }

      // Number fields
      ['precio', 'habitaciones', 'banos', 'medios_banos', 'estacionamientos',
       'm2_construccion', 'm2_terreno', 'pisos', 'ano_construccion', 'latitud', 'longitud'
      ].forEach(field => {
        const value = formData.get(field);
        if (value) data[field] = parseFloat(value);
      });

      // Boolean fields
      data.activo = document.getElementById('activo').checked;
      data.destacada = document.getElementById('destacada').checked;
      data.exclusiva = document.getElementById('exclusiva').checked;

      try {
        const response = await fetch(`/api/admin/properties/${propertyId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Error al actualizar propiedad');
        }

        window.location.href = '/admin/properties';
      } catch (error) {
        formError.textContent = error.message;
        formError.classList.remove('hidden');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Guardar Cambios';
      }
    });
  </script>
