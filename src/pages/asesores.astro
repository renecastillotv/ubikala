---
import Layout from '../layouts/Layout.astro';
import AgentCard from '../components/AgentCard.astro';
import Pagination from '../components/Pagination.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { useTranslations } from '../i18n';
import { searchAgents } from '../lib/meilisearch';
import { getUbikalaAgents } from '../lib/ubikala-db';
import { transformUbikalaAgents } from '../lib/transformers';
import type { Agent } from '../data/types';

// SSR para paginaci칩n
export const prerender = false;

const t = useTranslations('es');

// Configuraci칩n de paginaci칩n
const ITEMS_PER_PAGE = 24;
const currentPage = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1'));

// Fetch agents from both databases and merge
let agents: Agent[] = [];
let totalCount = 0;
try {
  // Fetch all agents from both sources
  const [meiliResult, ubikalaAgentRows] = await Promise.all([
    searchAgents({ limit: 100 }),
    getUbikalaAgents({ limit: 100 })
  ]);
  const clicAgents = meiliResult.agents;
  const ubikalaAgents = transformUbikalaAgents(ubikalaAgentRows);

  // Merge, sort by properties count, then paginate
  const allAgents = [...clicAgents, ...ubikalaAgents]
    .sort((a, b) => b.propertiesCount - a.propertiesCount);

  totalCount = allAgents.length;
  const offset = (currentPage - 1) * ITEMS_PER_PAGE;
  agents = allAgents.slice(offset, offset + ITEMS_PER_PAGE);
} catch (error) {
  console.error('Error fetching agents:', error);
}

const totalPages = Math.ceil(totalCount / ITEMS_PER_PAGE);

// Redirect if page is out of bounds
if (currentPage > totalPages && totalPages > 0) {
  return Astro.redirect('/asesores');
}
