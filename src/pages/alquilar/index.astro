---
import Layout from '../../layouts/Layout.astro';
import PropertyCard from '../../components/PropertyCard.astro';
import SearchBox from '../../components/SearchBox.astro';
import Pagination from '../../components/Pagination.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { useTranslations, tPais } from '../../i18n';
import { searchProperties, getMarketStats, getCitiesWithCounts } from '../../lib/meilisearch';
import MarketStatsBar from '../../components/MarketStatsBar.astro';
import type { Property } from '../../data/types';
import { getPageFAQs, getPopularZones, getRentalRequirements, getInfoBox, getGuideHeader, getCTAContent, getFAQSchema } from '../../lib/seo-content-db';
import SEOPopularZones from '../../components/SEOPopularZones.astro';
import SEORentalRequirements from '../../components/SEORentalRequirements.astro';
import SEOInfoBox from '../../components/SEOInfoBox.astro';
import SEOFAQSection from '../../components/SEOFAQSection.astro';

// SSR para paginación
export const prerender = false;

const t = useTranslations('es');
const country = Astro.locals.country;
const pais = country.name;

// Configuración de paginación
const ITEMS_PER_PAGE = 24;
const currentPage = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1'));

// Fetch rental properties from MeiliSearch with pagination
let properties: Property[] = [];
let totalCount = 0;
try {
  const offset = (currentPage - 1) * ITEMS_PER_PAGE;
  const result = await searchProperties({ operacion: 'renta', limit: ITEMS_PER_PAGE, offset, pais });
  properties = result.properties;
  totalCount = result.total;
} catch (error) {
  console.error('Error fetching rental properties:', error);
}

const totalPages = Math.ceil(totalCount / ITEMS_PER_PAGE);

let marketStats = null;
try { marketStats = await getMarketStats(pais); } catch {}

const searchLocations = await getCitiesWithCounts(pais);

// DB-driven SEO content
const faqs = await getPageFAQs(country.code, 'es', 'rent', pais);
const zones = await getPopularZones(country.code, 'es', 'rent', pais);
const requirements = await getRentalRequirements(country.code, 'es', pais);
const infoBox = await getInfoBox(country.code, 'es', 'rent', pais);
const guideHeader = await getGuideHeader(country.code, 'es', 'rent', pais);
const cta = await getCTAContent(country.code, 'es', 'rent', pais);

// Redirect if page is out of bounds
if (currentPage > totalPages && totalPages > 0) {
  return Astro.redirect('/alquilar');
}

const pageTitle = tPais(t.pages.rent.title, pais);
const pageDescription = tPais(t.pages.rent.description, pais);

// Schema para listado de alquileres
const listingSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: `Propiedades en Alquiler en ${pais}`,
  description: pageDescription,
  numberOfItems: totalCount,
  itemListElement: properties.slice(0, 10).map((property, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    item: {
      '@type': 'RealEstateListing',
      name: property.title,
      description: property.description.substring(0, 160),
      url: `https://ubikala.com/propiedad/${property.slug}`,
      image: property.images[0]?.url,
      offers: {
        '@type': 'Offer',
        price: property.price,
        priceCurrency: property.currency,
      },
    },
  })),
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords="alquilar apartamento republica dominicana, renta casa santo domingo, alquiler punta cana, apartamentos amueblados rd"
>
  <script type="application/ld+json" set:html={JSON.stringify(listingSchema)} slot="head" />

  <Breadcrumb items={[
    { label: 'Inicio', href: '/' },
    { label: 'Alquilar' }
  ]} />

  <!-- Hero -->
  <section class="bg-gradient-to-r from-secondary-600 to-secondary-700 py-12">
    <div class="container-custom">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Propiedades en Alquiler en {pais}
      </h1>
      <p class="text-green-100 text-lg max-w-3xl">
        Encuentra apartamentos amueblados, casas familiares, oficinas y locales comerciales disponibles para alquiler.
      </p>
    </div>
  </section>

  <!-- Search & Filters -->
  <section class="py-6 bg-white border-b">
    <div class="container-custom">
      <SearchBox variant="inline" locations={searchLocations} />
    </div>
  </section>

  <!-- Results -->
  <section class="section">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-8">
        <div>
          <p class="text-gray-600">
            <span class="font-semibold text-gray-900">{totalCount}</span> propiedades encontradas
          </p>
        </div>
        <div class="flex items-center gap-4">
          <label for="sort" class="text-sm text-gray-600">Ordenar por:</label>
          <select id="sort" class="select py-2 text-sm w-auto">
            <option value="recent">Más recientes</option>
            <option value="price-asc">Precio: menor a mayor</option>
            <option value="price-desc">Precio: mayor a menor</option>
            <option value="area-asc">Área: menor a mayor</option>
          </select>
        </div>
      </div>

      {properties.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {properties.map((property) => (
            <PropertyCard property={property} />
          ))}
        </div>
      ) : (
        <div class="card p-12 text-center">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <h2 class="text-2xl font-semibold text-gray-900 mb-2">
            No hay propiedades en alquiler
          </h2>
          <p class="text-gray-600 mb-6 max-w-md mx-auto">
            Actualmente no hay propiedades disponibles para alquiler. Visita las propiedades en venta.
          </p>
          <a href="/comprar" class="btn-primary">
            Ver propiedades en venta
          </a>
        </div>
      )}

      <!-- Pagination -->
      {properties.length > 0 && (
        <div class="mt-12">
          <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/alquilar" />
        </div>
      )}
    </div>
  </section>

  <!-- SEO Content -->
  <section class="py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="container-custom">
      {guideHeader && (
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{guideHeader.title}</h2>
          {guideHeader.subtitle && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{guideHeader.subtitle}</p>}
        </div>
      )}

      {marketStats && <div class="mb-16"><MarketStatsBar stats={marketStats} operacion="renta" lang="es" countryName={pais} /></div>}

      {(zones.length > 0 || requirements.length > 0) && (
        <div class="grid md:grid-cols-2 gap-12 mb-16">
          {zones.length > 0 && <SEOPopularZones zones={zones} title="Zonas Populares para Alquilar" colorScheme="secondary" />}
          {requirements.length > 0 && <SEORentalRequirements items={requirements} />}
        </div>
      )}

      {infoBox && <div class="mb-16"><SEOInfoBox title={infoBox.title} text={infoBox.text} color="blue" /></div>}
    </div>
  </section>

  {faqs.length > 0 && <SEOFAQSection faqs={faqs} title="Preguntas Frecuentes sobre Alquilar" />}

  <!-- CTA -->
  {cta ? (
    <section class="py-12 bg-gradient-to-r from-secondary-600 to-secondary-700">
      <div class="container-custom text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">{cta.title}</h2>
        <p class="text-green-100 mb-6 max-w-xl mx-auto">{cta.description}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/asesores" class="inline-flex items-center justify-center gap-2 bg-white text-secondary-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Ver Asesores
          </a>
          <a href="/contacto" class="inline-flex items-center justify-center gap-2 bg-secondary-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-secondary-400 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Contactar
          </a>
        </div>
      </div>
    </section>
  ) : (
    <section class="py-12 bg-gradient-to-r from-secondary-600 to-secondary-700">
      <div class="container-custom text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
          ¿Buscas un lugar para alquilar?
        </h2>
        <p class="text-green-100 mb-6 max-w-xl mx-auto">
          Nuestros asesores te ayudarán a encontrar el espacio perfecto para ti y tu familia.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/asesores" class="inline-flex items-center justify-center gap-2 bg-white text-secondary-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Ver Asesores
          </a>
          <a href="/contacto" class="inline-flex items-center justify-center gap-2 bg-secondary-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-secondary-400 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Contactar
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Schema -->
  {faqs.length > 0 && <script is:inline type="application/ld+json" set:html={JSON.stringify(getFAQSchema(faqs))} />}
</Layout>
