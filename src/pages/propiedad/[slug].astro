---
import Layout from '../../layouts/Layout.astro';
import PropertyCard from '../../components/PropertyCard.astro';
import ContactForm from '../../components/ContactForm.astro';
import PropertyMap from '../../components/PropertyMap.astro';
import Icon from '../../components/Icons.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { useTranslations, localizedUrl, getAlternateUrls } from '../../i18n';
import { getPropertyBySlug, getSimilarProperties, getAgentBySlug, getFeaturedProperties } from '../../lib/meilisearch';
import PropertyNotFound from '../../components/PropertyNotFound.astro';
import { getLocationCoordinates, hasValidCoordinates } from '../../lib/location-coordinates';
import type { Property, Agent } from '../../data/types';

// SSR - no prerender for dynamic property pages
export const prerender = false;

const { slug } = Astro.params;
const t = useTranslations('es');
const pais = Astro.locals.country.name;
const alternateUrls = getAlternateUrls(`/propiedad/${slug}`);

// Fetch property from MeiliSearch
let property: Property | null = null;
let similarProperties: Property[] = [];
let fullAgent: Agent | null = null;

try {
  property = await getPropertyBySlug(slug || '');

  if (property) {
    // Get full agent data from MeiliSearch asesores index
    if (property.agent.slug && property.agent.slug !== 'ubikala') {
      fullAgent = await getAgentBySlug(property.agent.slug);
    }

    // Get similar properties (same city, excluding current)
    similarProperties = (await getSimilarProperties(property, 3));
  }
} catch (error) {
  console.error('Error fetching property:', error);
}

// Use full agent if available, otherwise use embedded agent from property
const agent = fullAgent || property?.agent;

let fallbackProperties: Property[] = [];
let mapCoordinates: { lat: number; lng: number; zoom?: number } = { lat: 0, lng: 0, zoom: 10 };
let primaryImage: { url: string; alt: string; isPrimary?: boolean } = { url: '', alt: '', isPrimary: true };
let pageTitle = 'Propiedad No Disponible | Ubíkala';
let pageDescription = 'Esta propiedad ya no está disponible.';
let propertySchema = {};
let propertyHasCoords = false;
let formatPrice = (_price: number, _currency: string, _isRent: boolean): string => '';

if (!property) {
  try { fallbackProperties = await getFeaturedProperties(6); } catch {}
} else {
  // Determine map coordinates - use property coords if valid, otherwise fallback to location coords
  propertyHasCoords = hasValidCoordinates(property.location.latitude, property.location.longitude);
  mapCoordinates = propertyHasCoords
    ? { lat: property.location.latitude, lng: property.location.longitude, zoom: 15 }
    : getLocationCoordinates(property.location.sector, property.location.city, property.location.province);

  primaryImage = property.images.find(img => img.isPrimary) || property.images[0];

  formatPrice = (price: number, currency: string, isRent: boolean): string => {
    // Use explicit currency symbols for clarity
    const currencySymbol = currency === 'DOP' ? 'RD$' : 'US$';
    const formatted = `${currencySymbol} ${price.toLocaleString('en-US')}`;
    return isRent ? `${formatted}${t.property.pricePerMonth}` : formatted;
  };

  // Schema para propiedad individual (SEO)
  propertySchema = {
    '@context': 'https://schema.org',
    '@type': 'RealEstateListing',
    name: property.title,
    description: property.description,
    url: `https://ubikala.com/propiedad/${property.slug}`,
    image: property.images.map(img => img.url),
    datePosted: property.createdAt,
    dateModified: property.updatedAt,
    offers: {
      '@type': 'Offer',
      price: property.price,
      priceCurrency: property.currency,
      availability: property.status === 'active' ? 'https://schema.org/InStock' : 'https://schema.org/SoldOut',
    },
    address: {
      '@type': 'PostalAddress',
      addressLocality: property.location.city,
      addressRegion: property.location.province,
      addressCountry: 'DO',
    },
    geo: {
      '@type': 'GeoCoordinates',
      latitude: property.location.latitude,
      longitude: property.location.longitude,
    },
    numberOfRooms: property.bedrooms,
    numberOfBathroomsTotal: property.bathrooms,
    floorSize: {
      '@type': 'QuantitativeValue',
      value: property.area,
      unitCode: 'MTK',
    },
    ...(agent ? {
      'broker': {
        '@type': 'RealEstateAgent',
        'name': agent.name,
        ...(agent.photo && !agent.photo.includes('placeholder') ? { 'image': agent.photo } : {}),
        ...(agent.phone ? { 'telephone': agent.phone } : {}),
        ...(agent.email ? { 'email': agent.email } : {}),
      }
    } : {}),
  };

  // Strip HTML tags for meta description
  const stripHtml = (html: string) => html.replace(/<[^>]*>/g, '').replace(/\s+/g, ' ').trim();
  const cleanDescription = stripHtml(property.description);

  pageTitle = `${property.title} | ${property.transactionType === 'sale' ? 'En Venta' : 'En Alquiler'} - Ubíkala.com`;
  pageDescription = `${cleanDescription.substring(0, 155)}... ${property.bedrooms ? property.bedrooms + ' habitaciones, ' : ''}${property.bathrooms ? property.bathrooms + ' baños, ' : ''}${property.area} m² en ${property.location.city}.`;
}
---

<Layout
  title={pageTitle}
  description={pageDescription}
  image={primaryImage.url}
  type="article"
  alternateLanguages={alternateUrls}
>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(propertySchema)} slot="head" />

  <Breadcrumb items={[
    { label: 'Inicio', href: '/' },
    { label: property.transactionType === 'sale' ? 'Comprar' : 'Alquilar', href: property.transactionType === 'sale' ? '/comprar' : '/alquilar' },
    { label: property.location.city, href: `/propiedades/${property.location.city.toLowerCase().replace(/\s+/g, '-')}` },
    { label: property.title }
  ]} />

  <article class="py-8">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Gallery -->
          <div class="mb-8">
            <div class="relative rounded-2xl overflow-hidden mb-4 cursor-pointer" id="main-image-container" data-index="0">
              <img
                src={primaryImage.url}
                alt={primaryImage.alt || property.title}
                class="w-full h-[400px] md:h-[500px] object-cover"
              />
              <!-- Badges -->
              <div class="absolute top-4 left-4 flex gap-2">
                {property.transactionType === 'sale' ? (
                  <span class="badge bg-primary-600 text-white text-sm px-3 py-1">{t.property.forSale}</span>
                ) : (
                  <span class="badge bg-secondary-600 text-white text-sm px-3 py-1">{t.property.forRent}</span>
                )}
                {property.isExclusive && (
                  <span class="badge bg-purple-600 text-white text-sm px-3 py-1">{t.common.exclusive}</span>
                )}
              </div>
              <!-- Photo count -->
              <div class="absolute bottom-4 right-4 bg-black/60 text-white px-3 py-1 rounded-lg text-sm flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {property.images.length} fotos
              </div>
            </div>
            <!-- Thumbnail gallery -->
            <div class="grid grid-cols-4 gap-2">
              {property.images.slice(0, 4).map((image, index) => (
                <button class="rounded-lg overflow-hidden relative gallery-thumb" data-index={index}>
                  <img
                    src={image.url}
                    alt={image.alt}
                    class="w-full h-20 object-cover hover:opacity-80 transition-opacity"
                    loading="lazy"
                  />
                  {index === 3 && property.images.length > 4 && (
                    <div class="absolute inset-0 bg-black/50 flex items-center justify-center text-white font-semibold">
                      +{property.images.length - 4}
                    </div>
                  )}
                </button>
              ))}
            </div>
          </div>

          <!-- Lightbox Modal -->
          <div id="lightbox" class="fixed inset-0 bg-black/95 z-50 hidden items-center justify-center">
            <button id="lightbox-close" class="absolute top-4 right-4 text-white hover:text-gray-300 z-10">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
            <button id="lightbox-prev" class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-gray-300 bg-black/50 rounded-full p-2">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <button id="lightbox-next" class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-gray-300 bg-black/50 rounded-full p-2">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
            <img id="lightbox-image" src="" alt="" class="max-h-[90vh] max-w-[90vw] object-contain" />
            <div id="lightbox-counter" class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white text-sm bg-black/50 px-3 py-1 rounded-full"></div>
          </div>

          <!-- Title & Location -->
          <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-3">{property.title}</h1>
            <address class="flex items-center gap-2 text-gray-600 not-italic">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {[property.location.sector, property.location.city, property.location.province].filter(Boolean).join(', ') || pais}
            </address>
            {property.createdAt && (
              <time datetime={property.createdAt} class="text-sm text-gray-500 mt-1 block">
                Publicado: {new Date(property.createdAt).toLocaleDateString('es-DO', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
            )}
          </div>

          <!-- Key Features -->
          <dl class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            {property.bedrooms !== undefined && (
              <div class="bg-gray-50 rounded-xl p-4 text-center">
                <Icon name="bedroom" class="w-8 h-8 text-primary-600 mx-auto mb-2" />
                <dd class="text-2xl font-bold text-gray-900">{property.bedrooms}</dd>
                <dt class="text-sm text-gray-600">{t.property.bedrooms}</dt>
              </div>
            )}
            {property.bathrooms !== undefined && (
              <div class="bg-gray-50 rounded-xl p-4 text-center">
                <Icon name="bathroom" class="w-8 h-8 text-primary-600 mx-auto mb-2" />
                <dd class="text-2xl font-bold text-gray-900">{property.bathrooms}</dd>
                <dt class="text-sm text-gray-600">{t.property.bathrooms}</dt>
              </div>
            )}
            <div class="bg-gray-50 rounded-xl p-4 text-center">
              <Icon name="area" class="w-8 h-8 text-primary-600 mx-auto mb-2" />
              <dd class="text-2xl font-bold text-gray-900">{property.area}</dd>
              <dt class="text-sm text-gray-600">{t.property.sqm}</dt>
            </div>
            {property.parkingSpaces !== undefined && (
              <div class="bg-gray-50 rounded-xl p-4 text-center">
                <Icon name="parking" class="w-8 h-8 text-primary-600 mx-auto mb-2" />
                <dd class="text-2xl font-bold text-gray-900">{property.parkingSpaces}</dd>
                <dt class="text-sm text-gray-600">{t.property.parking}</dt>
              </div>
            )}
          </dl>

          <!-- Description -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">{t.property.description}</h2>
            <div class="prose prose-lg text-gray-700" set:html={property.description} />
          </div>

          <!-- Features -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">{t.property.features}</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
              {property.features.map((feature) => (
                <div class="flex items-center gap-2 text-gray-700">
                  <svg class="w-5 h-5 text-secondary-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{t.features[feature as keyof typeof t.features] || feature}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Location Map -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">{t.property.location}</h2>
            <PropertyMap
              latitude={mapCoordinates.lat}
              longitude={mapCoordinates.lng}
              zoom={mapCoordinates.zoom}
              title={property.title}
              address={`${property.location.sector}, ${property.location.city}`}
              isApproximate={!propertyHasCoords}
            />
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24">
            <!-- Price Card -->
            <div class="card p-6 mb-6">
              <div class="mb-4">
                <span class="text-sm text-gray-500">{t.property.price}</span>
                <div class="text-3xl font-bold text-primary-600">
                  {formatPrice(property.price, property.currency, property.transactionType === 'rent')}
                </div>
                {property.isPriceReduced && property.previousPrice && (
                  <div class="text-sm text-gray-500 line-through">
                    {formatPrice(property.previousPrice, property.currency, property.transactionType === 'rent')}
                  </div>
                )}
                {property.pricePerSqm && (
                  <div class="text-sm text-gray-500">
                    ${property.pricePerSqm.toLocaleString()} / m²
                  </div>
                )}
              </div>

              <div class="flex gap-2 mb-4">
                <a
                  href={`tel:${agent?.phone || agent?.whatsapp}`}
                  class="btn-primary flex-1 justify-center"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  {t.property.call}
                </a>
                {agent?.email && (
                  <a
                    href={`mailto:${agent.email}?subject=Consulta: ${property.title}`}
                    class="btn-outline flex-1 justify-center"
                  >
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Email
                  </a>
                )}
              </div>

              <div class="flex gap-2">
                <a
                  href={`https://wa.me/${agent?.whatsapp}?text=Hola, me interesa la propiedad: ${property.title}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 btn bg-green-600 text-white hover:bg-green-700 justify-center"
                  data-whatsapp-btn
                  data-property-slug={property.slug}
                  data-agent-name={agent?.name}
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  WhatsApp
                </a>
                <button
                  class="btn-outline px-3 flex items-center gap-1"
                  data-favorite-btn
                  data-property-slug={property.slug}
                  data-property-title={property.title}
                  data-property-image={primaryImage?.url}
                  data-property-price={property.price}
                  data-property-currency={property.currency}
                  data-property-location={`${property.location.sector}, ${property.location.city}`}
                  aria-label={t.property.save}
                >
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                  </svg>
                  <span class="text-sm">{t.property.save}</span>
                </button>
                <button
                  class="btn-outline px-4"
                  data-share-btn
                  data-share-title={property.title}
                  data-share-text={`Mira esta propiedad: ${property.title} en ${property.location.city}`}
                  data-share-url={`https://ubikala.com/propiedad/${property.slug}`}
                  aria-label={t.property.share}
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                  </svg>
                </button>
              </div>
            </div>

            <!-- Agent Card -->
            <div class="card p-6">
              <div class="flex items-center gap-4 mb-4">
                {agent?.photo && !agent.photo.includes('placeholder') ? (
                  <img
                    src={agent.photo}
                    alt={agent.name}
                    class="w-16 h-16 rounded-full object-cover"
                  />
                ) : (
                  <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
                    <span class="text-white text-xl font-bold">{agent?.name.split(' ').map(n => n[0]).slice(0, 2).join('')}</span>
                  </div>
                )}
                <div>
                  <h3 class="font-semibold text-gray-900">{agent?.name}</h3>
                  <p class="text-sm text-gray-500">
                    {agent?.isUbikalaUser
                      ? agent?.parentCompany
                        ? `Asesor Inmobiliario de ${agent.parentCompany}`
                        : agent?.userType === 'agent'
                          ? agent?.company || 'Inmobiliaria'
                          : agent?.userType === 'independent'
                            ? 'Asesor Independiente'
                            : 'Propietario'
                      : agent?.company || t.agent.title
                    }
                  </p>
                  {agent?.verified && (
                    <span class="inline-flex items-center gap-1 text-xs text-primary-600">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      {t.agent.verified}
                    </span>
                  )}
                </div>
              </div>

              <div class="space-y-2 text-sm text-gray-600 mb-4">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                  {agent?.propertiesCount || 0} {t.agent.properties}
                </div>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {t.agent.responseTime}: {agent?.responseTime || 'menos de 1 hora'}
                </div>
              </div>

              <a
                href={localizedUrl(agent?.isUbikalaUser ? `/usuario/${agent?.slug}` : `/asesor/${agent?.slug}`, 'es')}
                class="btn-outline w-full justify-center text-sm"
              >
                {t.agent.viewProfile}
              </a>
            </div>

            <!-- Contact Form -->
            <div class="mt-6">
              <ContactForm
                propertySlug={property.slug}
                propertyTitle={property.title}
                agentName={agent?.name || ''}
                agentWhatsapp={agent?.whatsapp || ''}
                agentCompany={agent?.company || ''}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Similar Properties -->
  {similarProperties.length > 0 && (
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">{t.property.similarProperties}</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {similarProperties.map((prop) => (
            <PropertyCard property={prop} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Lightbox Script -->
  <script define:vars={{ imagesJson: JSON.stringify(property.images.map(img => img.url)) }}>
    const images = JSON.parse(imagesJson);
    let currentIndex = 0;

    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightbox-image');
    const lightboxCounter = document.getElementById('lightbox-counter');
    const lightboxClose = document.getElementById('lightbox-close');
    const lightboxPrev = document.getElementById('lightbox-prev');
    const lightboxNext = document.getElementById('lightbox-next');
    const mainImageContainer = document.getElementById('main-image-container');
    const thumbs = document.querySelectorAll('.gallery-thumb');

    function openLightbox(index) {
      currentIndex = index;
      updateLightbox();
      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
      document.body.style.overflow = '';
    }

    function updateLightbox() {
      lightboxImage.src = images[currentIndex];
      lightboxCounter.textContent = `${currentIndex + 1} / ${images.length}`;
    }

    function prevImage() {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      updateLightbox();
    }

    function nextImage() {
      currentIndex = (currentIndex + 1) % images.length;
      updateLightbox();
    }

    // Event listeners
    mainImageContainer?.addEventListener('click', () => openLightbox(0));
    thumbs.forEach(thumb => {
      thumb.addEventListener('click', () => {
        const index = parseInt(thumb.dataset.index || '0');
        openLightbox(index);
      });
    });

    lightboxClose?.addEventListener('click', closeLightbox);
    lightboxPrev?.addEventListener('click', prevImage);
    lightboxNext?.addEventListener('click', nextImage);

    // Close on background click
    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) closeLightbox();
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (lightbox?.classList.contains('hidden')) return;
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft') prevImage();
      if (e.key === 'ArrowRight') nextImage();
    });
  </script>
</Layout>
