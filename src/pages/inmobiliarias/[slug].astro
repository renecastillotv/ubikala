---
import Layout from '../../layouts/Layout.astro';
import PropertyCard from '../../components/PropertyCard.astro';
import Pagination from '../../components/Pagination.astro';
import { useTranslations, getAlternateUrls } from '../../i18n';
import { getPortalInmobiliarias, searchProperties } from '../../lib/meilisearch';
import { getUbikalaInmobiliarias } from '../../lib/ubikala-db';
import { transformUbikalaAgents } from '../../lib/transformers';
import type { Agent, Property } from '../../data/types';

export const prerender = false;

const { slug } = Astro.params;
const t = useTranslations('es');
const alternateUrls = getAlternateUrls(`/inmobiliarias/${slug}`);

const ITEMS_PER_PAGE = 24;
const currentPage = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1'));

let inmobiliaria: Agent | null = null;
let properties: Property[] = [];
let totalCount = 0;

try {
  const [portalTenants, ubikalaRows] = await Promise.all([
    getPortalInmobiliarias(),
    getUbikalaInmobiliarias({ limit: 100 }),
  ]);
  const ubikalaInmobiliarias = transformUbikalaAgents(ubikalaRows);
  const allInmobiliarias = [...portalTenants, ...ubikalaInmobiliarias];

  inmobiliaria = allInmobiliarias.find(a => a.slug === slug) || null;

  if (inmobiliaria) {
    const offset = (currentPage - 1) * ITEMS_PER_PAGE;
    const result = await searchProperties({
      tenantId: inmobiliaria.id,
      limit: ITEMS_PER_PAGE,
      offset,
    });
    properties = result.properties;
    totalCount = result.total;
  }
} catch (error) {
  console.error('Error fetching inmobiliaria:', error);
}

if (!inmobiliaria) {
  return Astro.redirect('/inmobiliarias');
}

const totalPages = Math.ceil(totalCount / ITEMS_PER_PAGE);
---

<Layout
  title={`${inmobiliaria.name} - Inmobiliaria | Ubíkala`}
  description={`${inmobiliaria.name}: ${totalCount} propiedades disponibles. Encuentra casas, apartamentos y más con esta inmobiliaria verificada.`}
  alternateLanguages={alternateUrls}
>
  <!-- Breadcrumb -->
  <div class="bg-gray-100 py-4">
    <div class="container-custom">
      <nav class="flex text-sm text-gray-600">
        <a href="/" class="hover:text-primary-600">{t.nav.home}</a>
        <span class="mx-2">/</span>
        <a href="/inmobiliarias" class="hover:text-primary-600">{t.nav.realEstate}</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium">{inmobiliaria.name}</span>
      </nav>
    </div>
  </div>

  <!-- Agency Header -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 py-12">
    <div class="container-custom">
      <div class="flex items-center gap-6">
        {inmobiliaria.photo && !inmobiliaria.photo.includes('placeholder') && (
          <img
            src={inmobiliaria.photo}
            alt={inmobiliaria.name}
            class="w-20 h-20 md:w-24 md:h-24 rounded-xl object-cover bg-white p-1"
          />
        )}
        <div>
          <h1 class="text-2xl md:text-4xl font-bold text-white mb-2">
            {inmobiliaria.name}
          </h1>
          <p class="text-primary-100 text-lg">
            {t.agent.realEstateCompany} &bull; {totalCount} {t.agent.properties}
          </p>
          {inmobiliaria.phone && (
            <div class="mt-3 flex flex-wrap gap-3">
              <a href={`tel:${inmobiliaria.phone}`} class="inline-flex items-center gap-2 bg-white/20 text-white px-4 py-2 rounded-lg hover:bg-white/30 transition-colors text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                {t.property.call}
              </a>
              {inmobiliaria.whatsapp && (
                <a href={`https://wa.me/${inmobiliaria.whatsapp.replace(/\D/g, '')}?text=Hola, estoy interesado en sus propiedades en Ubíkala`} target="_blank" class="inline-flex items-center gap-2 bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors text-sm">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/><path d="M12 0C5.373 0 0 5.373 0 12c0 2.625.846 5.059 2.284 7.034L.789 23.492a.5.5 0 00.612.616l4.534-1.468A11.956 11.956 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 22c-2.347 0-4.518-.802-6.238-2.146l-.436-.353-2.695.873.9-2.647-.376-.46A9.955 9.955 0 012 12C2 6.486 6.486 2 12 2s10 4.486 10 10-4.486 10-10 10z"/></svg>
                  WhatsApp
                </a>
              )}
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Properties Grid -->
  <section class="section">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-8">
        <p class="text-gray-600">
          <span class="font-semibold text-gray-900">{totalCount}</span> {t.agent.properties}
        </p>
      </div>

      {properties.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {properties.map((property) => (
            <PropertyCard property={property} />
          ))}
        </div>
      ) : (
        <div class="card p-12 text-center">
          <p class="text-gray-600">{t.common.noResults}</p>
        </div>
      )}

      {properties.length > 0 && totalPages > 1 && (
        <div class="mt-12">
          <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl={`/inmobiliarias/${slug}`} />
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">
        ¿Buscas más opciones?
      </h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Explora todas las inmobiliarias y asesores en nuestro directorio.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/inmobiliarias" class="btn-primary">Ver Inmobiliarias</a>
        <a href="/asesores" class="btn-outline">Ver Asesores</a>
      </div>
    </div>
  </section>
</Layout>
