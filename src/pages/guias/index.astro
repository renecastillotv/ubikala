---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/Icons.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getSiteConfig } from '../../lib/config';

const config = await getSiteConfig(Astro.locals.country?.code);

const guides = [
  {
    slug: 'fideicomiso-inmobiliario',
    title: 'Fideicomiso Inmobiliario en RD',
    description: 'Todo lo que necesitas saber sobre comprar propiedades mediante fideicomiso en Republica Dominicana.',
    icon: 'shield',
    category: 'Legal'
  },
  {
    slug: 'proceso-compra-propiedad',
    title: 'Proceso de Compra de Propiedad',
    description: 'Guia paso a paso para comprar una propiedad en Republica Dominicana.',
    icon: 'house',
    category: 'Comprar'
  },
  {
    slug: 'documentos-compra-venta',
    title: 'Documentos para Compra-Venta',
    description: 'Lista completa de documentos necesarios para comprar o vender una propiedad.',
    icon: 'document',
    category: 'Legal'
  },
  {
    slug: 'impuestos-inmobiliarios',
    title: 'Impuestos Inmobiliarios',
    description: 'Guia sobre impuestos de transferencia, IPI y otros costos al comprar propiedades.',
    icon: 'calculator',
    category: 'Legal'
  },
  {
    slug: 'extranjeros-comprando-rd',
    title: 'Extranjeros Comprando en RD',
    description: 'Requisitos y proceso para que extranjeros compren propiedades en Republica Dominicana.',
    icon: 'globe',
    category: 'Comprar'
  },
  {
    slug: 'invertir-punta-cana',
    title: 'Invertir en Punta Cana',
    description: 'Guia de inversion inmobiliaria en Punta Cana: zonas, rentabilidad y consejos.',
    icon: 'trending',
    category: 'Inversion'
  }
];

const categories = [...new Set(guides.map(g => g.category))];
---

<Layout
  title={`Guias Inmobiliarias | ${config.company_name}`}
  description="Guias y recursos para comprar, vender o invertir en propiedades en Republica Dominicana. Aprende sobre fideicomisos, impuestos y mas."
  keywords="guias inmobiliarias rd, fideicomiso republica dominicana, comprar propiedad rd, impuestos inmobiliarios"
>
  <Breadcrumb items={[
    { label: 'Inicio', href: '/' },
    { label: 'Guías' }
  ]} />

  <!-- Hero -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 py-12">
    <div class="container-custom">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Guias Inmobiliarias
      </h1>
      <p class="text-primary-100 text-lg max-w-3xl">
        Recursos y guias para ayudarte en tu proceso de compra, venta o inversion inmobiliaria en Republica Dominicana.
      </p>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-8 bg-white border-b">
    <div class="container-custom">
      <div class="flex flex-wrap gap-3">
        <button class="px-4 py-2 rounded-full bg-primary-600 text-white text-sm font-medium">
          Todas
        </button>
        {categories.map(cat => (
          <button class="px-4 py-2 rounded-full bg-gray-100 text-gray-700 text-sm font-medium hover:bg-gray-200 transition-colors">
            {cat}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Guides Grid -->
  <section class="section">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {guides.map(guide => (
          <a href={`/guias/${guide.slug}`} class="card p-6 group hover:shadow-lg transition-shadow">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary-200 transition-colors">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {guide.icon === 'shield' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />}
                  {guide.icon === 'house' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />}
                  {guide.icon === 'document' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />}
                  {guide.icon === 'calculator' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />}
                  {guide.icon === 'globe' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />}
                  {guide.icon === 'trending' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />}
                </svg>
              </div>
              <div class="flex-1">
                <span class="text-xs font-medium text-primary-600 uppercase tracking-wider">{guide.category}</span>
                <h3 class="font-semibold text-gray-900 mt-1 group-hover:text-primary-600 transition-colors">
                  {guide.title}
                </h3>
                <p class="text-sm text-gray-600 mt-2">{guide.description}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          ¿Necesitas Ayuda Personalizada?
        </h2>
        <p class="text-gray-600 text-lg mb-8">
          Nuestros asesores inmobiliarios verificados pueden guiarte en todo el proceso de compra o venta.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/asesores" class="btn-primary">
            Ver Asesores Verificados
          </a>
          <a href="/contacto" class="btn-outline">
            Contactar Soporte
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
