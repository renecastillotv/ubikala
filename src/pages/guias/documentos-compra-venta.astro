---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getSiteConfig } from '../../lib/config';

const config = await getSiteConfig();

// Article Schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Documentos para Compra-Venta de Propiedades en RD",
  "description": "Lista completa de documentos necesarios para comprar o vender una propiedad en Republica Dominicana.",
  "image": `${config.site_url}/images/guias/documentos.jpg`,
  "author": { "@type": "Organization", "name": config.company_name, "url": config.site_url },
  "publisher": { "@type": "Organization", "name": config.company_name, "logo": { "@type": "ImageObject", "url": `${config.site_url}${config.logo_url}` } },
  "datePublished": "2024-01-15",
  "dateModified": new Date().toISOString().split('T')[0],
  "mainEntityOfPage": { "@type": "WebPage", "@id": `${config.site_url}/guias/documentos-compra-venta` }
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Que documentos necesita el comprador para comprar una propiedad en RD?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "El comprador necesita: cedula de identidad o pasaporte (original y copia), acta de matrimonio si aplica, RNC si es empresa, y comprobante de fondos (estado de cuenta o carta bancaria)."
      }
    },
    {
      "@type": "Question",
      "name": "¿Que documentos debe presentar el vendedor?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "El vendedor debe presentar: cedula o pasaporte, certificado de titulo original, certificacion de estado juridico (vigencia 30 dias), plano de deslinde aprobado, certificacion de impuestos al dia, y acta de matrimonio o divorcio."
      }
    },
    {
      "@type": "Question",
      "name": "¿Que es la certificacion de estado juridico?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Es un documento emitido por el Registro de Titulos que confirma el estado legal de la propiedad, indicando si tiene gravamenes, hipotecas o embargos. Tiene vigencia de 30 dias."
      }
    },
    {
      "@type": "Question",
      "name": "¿Pueden los extranjeros comprar propiedades con pasaporte?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Si, los extranjeros pueden comprar propiedades en Republica Dominicana usando solo su pasaporte vigente. No se requiere residencia ni visa especial."
      }
    }
  ]
};

---

<Layout
  title={`Documentos para Compra-Venta de Propiedades | ${config.company_name}`}
  description="Lista completa de documentos necesarios para comprar o vender una propiedad en Republica Dominicana."
  keywords="documentos compra propiedad rd, requisitos venta inmueble, papeles casa republica dominicana, certificado titulo"
