---
import Layout from '../layouts/Layout.astro';
import PropertyCard from '../components/PropertyCard.astro';
import { getPropertyBySlug } from '../lib/meilisearch';
import type { Property } from '../data/types';

export const prerender = false;

// Get favorites from cookie (set by client-side JS)
const favoritesCookie = Astro.cookies.get('favorites')?.value;
const favoriteSlugs: string[] = favoritesCookie ? JSON.parse(favoritesCookie) : [];

// Fetch properties for each favorite slug
let favoriteProperties: Property[] = [];

if (favoriteSlugs.length > 0) {
  const propertyPromises = favoriteSlugs.map(async (slug) => {
    try {
      return await getPropertyBySlug(slug);
    } catch (e) {
      console.error(`Error fetching favorite ${slug}:`, e);
      return null;
    }
  });

  const results = await Promise.all(propertyPromises);
  favoriteProperties = results.filter((p): p is Property => p !== null);
}

const pageTitle = 'Guardados | PropiedadEnRD';
const pageDescription = 'Tus propiedades guardadas en PropiedadEnRD.';
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white border-b">
      <div class="container-custom py-8">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
            </svg>
          </div>
          <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Guardados</h1>
        </div>
        <p class="text-gray-600" id="favorites-count">
          {favoriteProperties.length > 0
            ? `${favoriteProperties.length} propiedad${favoriteProperties.length !== 1 ? 'es' : ''} guardada${favoriteProperties.length !== 1 ? 's' : ''}`
            : 'No tienes propiedades guardadas'}
        </p>
      </div>
    </div>

    <!-- Content -->
    <section class="container-custom py-8">
      {favoriteProperties.length > 0 ? (
        <div id="favorites-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {favoriteProperties.map((property, index) => (
            <div data-favorite-card={property.slug} class="relative">
              <PropertyCard property={property} priority={index < 4} />
            </div>
          ))}
        </div>
      ) : (
        <div id="empty-state" class="text-center py-16">
          <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">No tienes propiedades guardadas</h2>
          <p class="text-gray-600 mb-6 max-w-md mx-auto">
            Explora nuestras propiedades y guarda las que te interesen con el icono de marcador.
          </p>
          <a href="/comprar" class="btn btn-primary">
            Explorar Propiedades
          </a>
        </div>
      )}

      <!-- Dynamic empty state (shown when all favorites are removed) -->
      <div id="dynamic-empty-state" class="hidden text-center py-16">
        <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">No tienes propiedades guardadas</h2>
        <p class="text-gray-600 mb-6 max-w-md mx-auto">
          Explora nuestras propiedades y guarda las que te interesen con el icono de marcador.
        </p>
        <a href="/comprar" class="btn btn-primary">
          Explorar Propiedades
        </a>
      </div>
    </section>

    <!-- Tips Section -->
    <section class="container-custom pb-12">
      <div class="bg-primary-50 rounded-2xl p-6 md:p-8">
        <h3 class="font-semibold text-gray-900 mb-4">Consejos para encontrar tu propiedad ideal</h3>
        <div class="grid md:grid-cols-3 gap-4">
          <div class="flex gap-3">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-primary-600 font-semibold text-sm">1</span>
            </div>
            <p class="text-sm text-gray-600">Guarda varias opciones para compararlas fácilmente</p>
          </div>
          <div class="flex gap-3">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-primary-600 font-semibold text-sm">2</span>
            </div>
            <p class="text-sm text-gray-600">Contacta a los asesores directamente desde la tarjeta</p>
          </div>
          <div class="flex gap-3">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-primary-600 font-semibold text-sm">3</span>
            </div>
            <p class="text-sm text-gray-600">Usa los filtros de búsqueda para refinar tus opciones</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Favorites management - must match property-actions.ts format
  const FAVORITES_KEY = 'propiedadenrd_favorites';

  interface FavoriteProperty {
    slug: string;
    title: string;
    image: string;
    price: number;
    currency: string;
    location: string;
    addedAt: string;
  }

  function getFavoriteSlugs(): string[] {
    if (typeof window === 'undefined') return [];
    try {
      const stored = localStorage.getItem(FAVORITES_KEY);
      if (!stored) return [];
      const favorites: FavoriteProperty[] = JSON.parse(stored);
      // Extract just the slugs from the full favorite objects
      return favorites.map(f => f.slug);
    } catch {
      return [];
    }
  }

  function updateUI() {
    const favoriteSlugs = getFavoriteSlugs();
    const grid = document.getElementById('favorites-grid');
    const dynamicEmptyState = document.getElementById('dynamic-empty-state');
    const countEl = document.getElementById('favorites-count');

    // Update count
    if (countEl) {
      countEl.textContent = favoriteSlugs.length > 0
        ? `${favoriteSlugs.length} propiedad${favoriteSlugs.length !== 1 ? 'es' : ''} guardada${favoriteSlugs.length !== 1 ? 's' : ''}`
        : 'No tienes propiedades guardadas';
    }

    // Hide cards that are no longer favorites
    if (grid) {
      const cards = grid.querySelectorAll('[data-favorite-card]');
      let visibleCount = 0;
      cards.forEach((card) => {
        const slug = card.getAttribute('data-favorite-card');
        if (slug && !favoriteSlugs.includes(slug)) {
          (card as HTMLElement).style.display = 'none';
        } else if (slug && favoriteSlugs.includes(slug)) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        }
      });

      // Show empty state if all removed
      if (visibleCount === 0) {
        grid.classList.add('hidden');
        if (dynamicEmptyState) dynamicEmptyState.classList.remove('hidden');
      }
    }
  }

  // Listen for favorite changes
  document.addEventListener('DOMContentLoaded', () => {
    // Initial UI update
    updateUI();

    // Mark favorite buttons on page as favorites
    const favoriteSlugs = getFavoriteSlugs();
    document.querySelectorAll('[data-favorite-btn]').forEach((btn) => {
      const slug = btn.getAttribute('data-property-slug');
      if (slug && favoriteSlugs.includes(slug)) {
        btn.classList.add('is-favorite');
        const icon = btn.querySelector('svg');
        if (icon) icon.setAttribute('fill', 'currentColor');
      }
    });
  });

  // Listen for storage events (from other tabs)
  window.addEventListener('storage', (e) => {
    if (e.key === FAVORITES_KEY) {
      updateUI();
    }
  });

  // Custom event for same-tab updates (fired by property-actions.ts)
  window.addEventListener('favorites-updated', () => {
    updateUI();
  });
</script>
