---
import Layout from '../../layouts/Layout.astro';
import PropertyCard from '../../components/PropertyCard.astro';
import Icon from '../../components/Icons.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { useTranslations, localizedUrl } from '../../i18n';
import { getAgentBySlug, getPropertiesByAgent, searchAgents } from '../../lib/meilisearch';
import AgentNotFound from '../../components/AgentNotFound.astro';
import type { Agent, Property } from '../../data/types';

// SSR para páginas dinámicas
export const prerender = false;

const { slug } = Astro.params;
const t = useTranslations('es');
const pais = Astro.locals.country.name;

// Buscar agente en la base de datos
let agent: Agent | null = null;
let agentProperties: Property[] = [];

try {
  agent = await getAgentBySlug(slug || '');
  if (agent) {
    // Buscar propiedades del agente por slug
    agentProperties = await getPropertiesByAgent(agent.slug, 12);
  }
} catch (error) {
  console.error('Error fetching agent:', error);
}

let fallbackAgents: Agent[] = [];
let agentSchema = {};
let actualPropertyCount = 0;
let pageTitle = 'Asesor No Disponible | Ubíkala';
let pageDescription = 'Este asesor no está activo en este momento.';
let hasValidPhoto = false;
let agentInitials = '';

if (!agent) {
  try { const result = await searchAgents({ limit: 6 }); fallbackAgents = result.agents; } catch {}
} else {
  // Schema para asesor (SEO) - Enhanced Person + RealEstateAgent
  agentSchema = {
    '@context': 'https://schema.org',
    '@type': ['Person', 'RealEstateAgent'],
    '@id': `https://ubikala.com/asesor/${agent.slug}#agent`,
    name: agent.name,
    url: `https://ubikala.com/asesor/${agent.slug}`,
    image: agent.photo && !agent.photo.includes('placeholder') ? agent.photo : undefined,
    description: agent.bio || `Asesor inmobiliario verificado en Republica Dominicana`,
    telephone: agent.phone,
    email: agent.email,
    jobTitle: 'Asesor Inmobiliario',
    worksFor: agent.company ? {
      '@type': 'Organization',
      name: agent.company,
    } : undefined,
    areaServed: agent.locations.length > 0
      ? agent.locations.map(loc => ({ '@type': 'City', name: loc }))
      : { '@type': 'Country', name: pais },
    knowsAbout: agent.specializations.map(spec => {
      const specNames: Record<string, string> = {
        'house': 'Casas', 'apartment': 'Apartamentos', 'villa': 'Villas',
        'land': 'Terrenos', 'commercial': 'Comercial', 'office': 'Oficinas'
      };
      return specNames[spec] || spec;
    }),
    knowsLanguage: agent.languages,
    aggregateRating: {
      '@type': 'AggregateRating',
      ratingValue: agent.rating || 5,
      bestRating: 5,
      worstRating: 1,
      reviewCount: agent.reviewCount || 1,
      ratingCount: agent.reviewCount || 1
    }
  };

  // Use actual property count from query, not from stats
  actualPropertyCount = agentProperties.length;

  pageTitle = `${agent.name} - ${agent.company || 'Asesor Inmobiliario'} | Ubíkala.com`;
  pageDescription = agent.bio
    ? `${agent.bio.substring(0, 150)}... Contacta a ${agent.name} para propiedades en ${agent.locations.slice(0, 3).join(', ')}.`
    : `${agent.name} - Asesor inmobiliario verificado. ${actualPropertyCount} propiedades activas. Contacta ahora.`;

  // Check if agent has valid photo
  hasValidPhoto = !!(agent.photo &&
    agent.photo !== '/images/agent-placeholder.svg' &&
    !agent.photo.includes('placeholder'));
  agentInitials = agent.name.split(' ').map(n => n[0]).slice(0, 2).join('');
}
---

{agent ? (
<Layout
  title={pageTitle}
  description={pageDescription}
  image={agent.photo}
>
  <script type="application/ld+json" set:html={JSON.stringify(agentSchema)} slot="head" />

  <Breadcrumb items={[
    { label: 'Inicio', href: '/' },
    { label: 'Asesores', href: '/asesores' },
    { label: agent.name }
  ]} />

  <section class="section">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Sidebar - Info del Asesor -->
        <div class="lg:col-span-1">
          <div class="card p-6 sticky top-24">
            <!-- Foto y nombre -->
            <div class="text-center mb-6">
              <div class="relative inline-block">
                {hasValidPhoto ? (
                  <img
                    src={agent.photo}
                    alt={agent.name}
                    class="w-32 h-32 rounded-full object-cover mx-auto ring-4 ring-gray-100"
                  />
                ) : (
                  <div class="w-32 h-32 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 mx-auto ring-4 ring-gray-100 flex items-center justify-center">
                    <span class="text-white text-3xl font-bold">{agentInitials}</span>
                  </div>
                )}
                {agent.verified && (
                  <span class="absolute bottom-0 right-0 w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center ring-2 ring-white">
                    <Icon name="check" class="w-5 h-5 text-white" />
                  </span>
                )}
              </div>
              <h1 class="text-2xl font-bold text-gray-900 mt-4">{agent.name}</h1>
              {agent.company && (
                <p class="text-gray-600">{agent.company}</p>
              )}
              {agent.verified && (
                <span class="inline-flex items-center gap-1 text-sm text-primary-600 mt-2">
                  <Icon name="verified" class="w-4 h-4" />
                  Asesor Verificado
                </span>
              )}
            </div>

            <!-- Rating -->
            <div class="flex items-center justify-center gap-2 mb-6">
              <div class="flex">
                {[1, 2, 3, 4, 5].map((star) => (
                  <Icon
                    name="star"
                    class={`w-5 h-5 ${star <= Math.round(agent.rating) ? 'text-accent-500' : 'text-gray-300'}`}
                  />
                ))}
              </div>
              <span class="text-gray-600">
                {agent.rating} ({agent.reviewCount} reseñas)
              </span>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-2 gap-4 mb-6">
              <div class="text-center p-3 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900">{actualPropertyCount}</div>
                <div class="text-sm text-gray-600">Propiedades</div>
              </div>
              <div class="text-center p-3 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900">{agent.experienceYears}</div>
                <div class="text-sm text-gray-600">Años Exp.</div>
              </div>
            </div>

            <!-- Idiomas -->
            {agent.languages.length > 0 && (
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">Idiomas</h3>
                <div class="flex flex-wrap gap-2">
                  {agent.languages.map((lang) => (
                    <span class="badge-primary">{lang}</span>
                  ))}
                </div>
              </div>
            )}

            <!-- Zonas -->
            {agent.locations.length > 0 && (
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">Zonas de Trabajo</h3>
                <div class="flex flex-wrap gap-2">
                  {agent.locations.map((loc) => (
                    <span class="badge bg-gray-100 text-gray-700">{loc}</span>
                  ))}
                </div>
              </div>
            )}

            <!-- Tiempo de respuesta -->
            <div class="flex items-center gap-2 text-sm text-gray-600 mb-6">
              <Icon name="clock" class="w-4 h-4" />
              <span>Responde en {agent.responseTime}</span>
            </div>

            <!-- Botones de contacto -->
            <div class="space-y-3">
              {agent.whatsapp && (
                <a
                  href={`https://wa.me/${agent.whatsapp.replace(/[^0-9]/g, '')}?text=Hola ${agent.name}, te contacto desde Ubikala.com`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn bg-green-600 text-white hover:bg-green-700 w-full justify-center"
                >
                  <Icon name="whatsapp" class="w-5 h-5 mr-2" />
                  WhatsApp
                </a>
              )}
              {agent.phone && (
                <a
                  href={`tel:${agent.phone}`}
                  class="btn-primary w-full justify-center"
                >
                  <Icon name="phone" class="w-5 h-5 mr-2" />
                  Llamar
                </a>
              )}
              {agent.email && (
                <a
                  href={`mailto:${agent.email}`}
                  class="btn-outline w-full justify-center"
                >
                  <Icon name="email" class="w-5 h-5 mr-2" />
                  Email
                </a>
              )}
            </div>

            <!-- Redes sociales -->
            {agent.socialMedia && (agent.socialMedia.instagram || agent.socialMedia.facebook || agent.socialMedia.linkedin) && (
              <div class="mt-6 pt-6 border-t border-gray-200">
                <h3 class="text-sm font-semibold text-gray-700 mb-3">Redes Sociales</h3>
                <div class="flex gap-3">
                  {agent.socialMedia.instagram && (
                    <a
                      href={agent.socialMedia.instagram.startsWith('http') ? agent.socialMedia.instagram : `https://instagram.com/${agent.socialMedia.instagram.replace('@', '')}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-pink-100 transition-colors"
                    >
                      <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    </a>
                  )}
                  {agent.socialMedia.facebook && (
                    <a
                      href={agent.socialMedia.facebook.startsWith('http') ? agent.socialMedia.facebook : `https://facebook.com/${agent.socialMedia.facebook}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-primary-100 transition-colors"
                    >
                      <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </a>
                  )}
                  {agent.socialMedia.linkedin && (
                    <a
                      href={agent.socialMedia.linkedin.startsWith('http') ? agent.socialMedia.linkedin : `https://linkedin.com/in/${agent.socialMedia.linkedin}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-primary-100 transition-colors"
                    >
                      <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Bio -->
          {agent.bio && (
            <div class="card p-6 mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Sobre {agent.name}</h2>
              <p class="text-gray-600 leading-relaxed">{agent.bio}</p>
            </div>
          )}

          <!-- Propiedades del Asesor -->
          <div>
            <h2 class="text-xl font-semibold text-gray-900 mb-6">
              Propiedades de {agent.name}
              <span class="text-gray-500 font-normal">({agentProperties.length})</span>
            </h2>

            {agentProperties.length > 0 ? (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {agentProperties.map((property) => (
                  <PropertyCard property={property} />
                ))}
              </div>
            ) : (
              <div class="card p-8 text-center">
                <Icon name="house" class="w-12 h-12 text-gray-300 mx-auto mb-4" />
                <p class="text-gray-600">Este asesor no tiene propiedades activas actualmente.</p>
                <a href="/comprar" class="btn-primary mt-4">
                  Ver todas las propiedades
                </a>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
) : (
<Layout title="Asesor No Disponible | Ubíkala" description="Este asesor no está activo en este momento.">
  <AgentNotFound lang="es" agents={fallbackAgents} />
</Layout>
)}
